<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="?attr/colorSurface">
	
	<!-- Handle -->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingTop="12dp"
		android:paddingBottom="12dp"
		android:gravity="center">
		<View
			android:layout_width="40dp"
			android:layout_height="4dp"
			android:background="?attr/colorOutline"
			android:layout_marginBottom="8dp" />
	</LinearLayout>
	
	<!-- Title -->
	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Post Settings"
		android:textSize="20sp"
		android:textStyle="bold"
		android:textColor="?attr/colorOnSurface"
		android:paddingLeft="24dp"
		android:paddingRight="24dp"
		android:paddingBottom="16dp" />
	
	<!-- Statistics Settings Section -->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:paddingLeft="24dp"
		android:paddingRight="24dp"
		android:paddingBottom="16dp">
		
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Statistics Settings"
			android:textSize="18sp"
			android:textStyle="bold"
			android:textColor="?attr/colorOnSurface"
			android:layout_marginBottom="12dp" />
		
		<!-- Hide Views Count -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:paddingTop="8dp"
			android:paddingBottom="8dp">
			<com.google.android.material.switchmaterial.SwitchMaterial
				android:id="@+id/hideViewsSwitch"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="4dp"
				android:gravity="left|center_vertical"
				android:textSize="16sp"
				android:textStyle="bold"
				android:textColor="?attr/colorOnSurface"
				android:text="@string/hide_the_number_of_views" />
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="If enabled, the views count won't be shown on this post"
				android:textSize="14sp"
				android:textColor="?attr/colorOnSurfaceVariant" />
		</LinearLayout>
		
		<!-- Hide Likes Count -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:paddingTop="8dp"
			android:paddingBottom="8dp">
			<com.google.android.material.switchmaterial.SwitchMaterial
				android:id="@+id/hideLikesSwitch"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="4dp"
				android:gravity="left|center_vertical"
				android:textSize="16sp"
				android:textStyle="bold"
				android:textColor="?attr/colorOnSurface"
				android:text="@string/hide_the_number_of_likes" />
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="If enabled, Likes count won't be shown on this post"
				android:textSize="14sp"
				android:textColor="?attr/colorOnSurfaceVariant" />
		</LinearLayout>
		
		<!-- Hide Comments Count -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:paddingTop="8dp"
			android:paddingBottom="8dp">
			<com.google.android.material.switchmaterial.SwitchMaterial
				android:id="@+id/hideCommentsSwitch"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="4dp"
				android:gravity="left|center_vertical"
				android:textSize="16sp"
				android:textStyle="bold"
				android:textColor="?attr/colorOnSurface"
				android:text="@string/hide_the_number_of_comments" />
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="If enabled, the number of comments won't be shown on this post"
				android:textSize="14sp"
				android:textColor="?attr/colorOnSurfaceVariant" />
		</LinearLayout>
	</LinearLayout>
	
	<!-- Divider -->
	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:background="?attr/colorOutline"
		android:layout_marginLeft="24dp"
		android:layout_marginRight="24dp"
		android:layout_marginBottom="16dp" />
	
	<!-- Privacy Settings Section -->
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:paddingLeft="24dp"
		android:paddingRight="24dp"
		android:paddingBottom="24dp">
		
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Privacy Settings"
			android:textSize="18sp"
			android:textStyle="bold"
			android:textColor="?attr/colorOnSurface"
			android:layout_marginBottom="12dp" />
		
		<!-- Hide Post from Everyone -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:paddingTop="8dp"
			android:paddingBottom="8dp">
			<com.google.android.material.switchmaterial.SwitchMaterial
				android:id="@+id/hidePostSwitch"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="4dp"
				android:gravity="left|center_vertical"
				android:textSize="16sp"
				android:textStyle="bold"
				android:textColor="?attr/colorOnSurface"
				android:text="@string/hide_post_from_everyone" />
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Only you can see the post"
				android:textSize="14sp"
				android:textColor="?attr/colorOnSurfaceVariant" />
		</LinearLayout>
		
		<!-- Disable Save to Favorites -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:paddingTop="8dp"
			android:paddingBottom="8dp">
			<com.google.android.material.switchmaterial.SwitchMaterial
				android:id="@+id/disableSaveSwitch"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="4dp"
				android:gravity="left|center_vertical"
				android:textSize="16sp"
				android:textStyle="bold"
				android:textColor="?attr/colorOnSurface"
				android:text="@string/disable_saving_to_favorites" />
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/disable_saving_to_favorites_subtitle"
				android:textSize="14sp"
				android:textColor="?attr/colorOnSurfaceVariant" />
		</LinearLayout>
		
		<!-- Disable Comments -->
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:paddingTop="8dp"
			android:paddingBottom="8dp">
			<com.google.android.material.switchmaterial.SwitchMaterial
				android:id="@+id/disableCommentsSwitch"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="4dp"
				android:gravity="left|center_vertical"
				android:textSize="16sp"
				android:textStyle="bold"
				android:textColor="?attr/colorOnSurface"
				android:text="@string/disable_comments" />
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/disable_comments_subtitle"
				android:textSize="14sp"
				android:textColor="?attr/colorOnSurfaceVariant" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>