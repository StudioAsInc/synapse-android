<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/body"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="8dp"
		android:paddingRight="8dp"
		android:orientation="horizontal"
		android:animateLayoutChanges="true">
		<androidx.cardview.widget.CardView
			android:id="@+id/mProfileCard"
			android:layout_width="34dp"
			android:layout_height="34dp"
			android:layout_marginLeft="2dp"
			android:layout_marginTop="8dp"
			app:cardElevation="0dp"
			android:visibility="gone"
			app:cardCornerRadius="200dp">
			<ImageView
				android:id="@+id/mProfileImage"
				android:focusable="false"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:src="@drawable/avatar"
				android:scaleType="centerCrop" />
		</androidx.cardview.widget.CardView>
		<LinearLayout
			android:id="@+id/message_layout"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/menuView_d"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:orientation="horizontal" />
			<LinearLayout
				android:id="@+id/messageBG"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="4dp"
				android:layout_marginRight="4dp"
				android:paddingLeft="12dp"
				android:paddingTop="10dp"
				android:paddingRight="12dp"
				android:paddingBottom="10dp"
				android:background="#CFD8DC"
				android:orientation="vertical">
				<com.google.android.material.card.MaterialCardView
					android:id="@+id/mRepliedMessageLayout"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginBottom="8dp"
					android:visibility="gone"
					app:cardElevation="0dp"
					app:cardCornerRadius="6dp">
					<LinearLayout
						android:id="@+id/linear2"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:orientation="horizontal">
						<LinearLayout
							android:id="@+id/mRepliedMessageLayoutLeftBar"
							android:layout_width="4dp"
							android:layout_height="match_parent"
							android:layout_marginRight="8dp"
							android:background="#2979FF"
							android:orientation="vertical" />
						<LinearLayout
							android:id="@+id/mRepliedMessageLayoutRightBody"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:orientation="vertical">
							<TextView
								android:id="@+id/mRepliedMessageLayoutUsername"
								android:focusable="false"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="@string/ph_username"
								android:textSize="12sp"
								android:textColor="#445E91"
								android:singleLine="true" />
							<!-- CRITICAL FIX: Add ImageView for reply image previews -->
							<ImageView
								android:id="@+id/mRepliedMessageLayoutImage"
								android:layout_width="60dp"
								android:layout_height="60dp"
								android:layout_marginTop="4dp"
								android:layout_marginBottom="4dp"
								android:scaleType="centerCrop"
								android:background="@drawable/ph_imgbluredsqure"
								android:visibility="gone" />
							<TextView
								android:id="@+id/mRepliedMessageLayoutMessage"
								android:focusable="false"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:paddingRight="4dp"
								android:text="@string/ph_replied_message"
								android:textSize="16sp"
								android:autoLink="all"
								android:maxLines="3"
								android:ellipsize="end"
								android:textColorLink="#FF0000" />
						</LinearLayout>
					</LinearLayout>
				</com.google.android.material.card.MaterialCardView>
				<com.synapse.social.studioasinc.animations.ShimmerFrameLayout
					android:id="@+id/shimmer_container"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					app:shimmer_color="#9A9A9A">
					<TextView
						android:id="@+id/message_text"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/ph_message"
						android:textSize="16sp"
						android:autoLink="all"
						android:textColorLink="#FF0000" />
				</com.synapse.social.studioasinc.animations.ShimmerFrameLayout>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/my_message_info"
				android:layout_width="wrap_content"
				android:layout_height="16dp"
				android:layout_marginLeft="8dp"
				android:layout_marginRight="8dp"
				android:layout_marginBottom="2dp"
				android:gravity="right|center_vertical"
				android:orientation="horizontal"
				android:layout_gravity="right">
				<TextView
					android:id="@+id/date"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="4dp"
					android:layout_marginRight="4dp"
					android:text="00:00"
					android:textSize="12sp"
					android:textColor="#000000" />
				<ImageView
					android:id="@+id/message_state"
					android:focusable="false"
					android:layout_width="14dp"
					android:layout_height="14dp"
					android:layout_marginRight="4dp"
					android:src="@drawable/ic_check_black"
					android:scaleType="centerInside" />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
