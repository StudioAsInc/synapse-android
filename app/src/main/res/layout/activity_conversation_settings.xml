									android:layout_height="wrap_content"
									android:layout_marginTop="10dp"
									android:gravity="center_horizontal|center_vertical"
									android:orientation="horizontal"
									android:background="?attr/selectableItemBackground"
									android:clickable="true"
									android:focusable="true"
									android:paddingTop="8dp"
									android:paddingBottom="8dp">
									<ImageView
										android:id="@+id/quickReactionIcon"
										android:layout_width="25dp"
										android:layout_height="25dp"
										android:layout_marginLeft="10dp"
										android:layout_marginRight="12dp"
										android:src="@drawable/ic_thumb_up_48px"
										android:scaleType="fitCenter"
										app:tint="?attr/colorOnSurface" />
									<LinearLayout
										android:id="@+id/linear20"
										android:layout_width="match_parent"
										android:layout_height="wrap_content"
										android:padding="8dp"
										android:orientation="vertical">
										<TextView
											android:id="@+id/quickReactionTitle"
											android:layout_width="wrap_content"
											android:layout_height="wrap_content"
											android:text="Quick reaction"
											android:textSize="18sp"
											android:textColor="?attr/colorOnSurface" />
										<TextView
											android:id="@+id/quickReactionSubtitle"
											android:layout_width="wrap_content"
											android:layout_height="wrap_content"
											android:layout_marginTop="5dp"
											android:text="ðŸ‘"
											android:textSize="14sp"
											android:textColor="?attr/colorOnSurfaceVariant" />
									</LinearLayout>
								</LinearLayout>
							</LinearLayout>
						</androidx.cardview.widget.CardView>
						<TextView
							android:id="@+id/moreActionsTitle"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginTop="20dp"
							android:padding="8dp"
							android:text="More actions"
							android:textSize="14sp"
							android:textColor="?attr/colorOnSurfaceVariant" />
						<androidx.cardview.widget.CardView
							android:id="@+id/moreActionsCard"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							app:cardElevation="0dp"
							app:cardCornerRadius="20dp"
							app:cardBackgroundColor="?attr/colorSurface">
							<LinearLayout
								android:id="@+id/linear21"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:padding="8dp"
								android:orientation="vertical">
								<androidx.cardview.widget.CardView
									android:id="@+id/cardReadReceipt"
									android:layout_width="match_parent"
									android:layout_height="70dp"
									app:cardCornerRadius="20dp"
									android:clickable="true"
									android:focusable="true"
									android:background="?attr/selectableItemBackground"
									app:cardBackgroundColor="?attr/colorSurface"
									android:elevation="0dp">
									<LinearLayout
										android:id="@+id/readReceiptsMainSwitch"
										android:layout_width="match_parent"
										android:layout_height="match_parent"
										android:gravity="center_horizontal|center_vertical"
										android:orientation="horizontal">
										<ImageView
											android:id="@+id/readReceiptsIcon"
											android:layout_width="wrap_content"
											android:layout_height="25dp"
											android:layout_marginLeft="10dp"
											android:layout_marginRight="12dp"
											android:src="@drawable/mark_chat_read_24px"
											android:scaleType="fitCenter"
											app:tint="?attr/colorOnSurface" />
										<LinearLayout
											android:id="@+id/linear26"
											android:layout_width="wrap_content"
											android:layout_height="wrap_content"
											android:padding="8dp"
											android:orientation="vertical"
											android:layout_weight="1">
											<TextView
												android:id="@+id/readReceiptsTitle"
												android:layout_width="wrap_content"
												android:layout_height="wrap_content"
												android:text="Read receipts"
												android:textSize="18sp"
												android:textColor="?attr/colorOnSurface" />
											<TextView
												android:id="@+id/readReceiptsSubtitle"
												android:layout_width="wrap_content"
												android:layout_height="wrap_content"
												android:layout_marginTop="5dp"
												android:text="Default"
												android:textSize="14sp"
												android:textColor="?attr/colorOnSurfaceVariant" />
										</LinearLayout>
										<com.google.android.material.materialswitch.MaterialSwitch
											android:id="@+id/switchReadReceipt"
											android:layout_width="wrap_content"
											android:layout_height="wrap_content"
											android:layout_marginLeft="3dp"
											android:layout_marginRight="10dp"
											android:textSize="12sp"
											android:textColor="?attr/colorOnSurface"
											android:checked="true" />
									</LinearLayout>
								</androidx.cardview.widget.CardView>
								<LinearLayout
									android:id="@+id/disappearingMainSwitch"
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:layout_marginTop="10dp"
									android:layout_marginBottom="10dp"
									android:gravity="center_horizontal|center_vertical"
									android:orientation="horizontal"
									android:clickable="true"
									android:focusable="true"
									android:background="?attr/selectableItemBackground">
									<ImageView
										android:id="@+id/disappearingIcon"
										android:layout_width="25dp"
										android:layout_height="25dp"
										android:layout_marginLeft="10dp"
										android:layout_marginRight="12dp"
										android:src="@drawable/auto_delete_24px"
										android:scaleType="fitCenter"
										app:tint="?attr/colorOnSurface" />
									<LinearLayout
										android:id="@+id/linear27"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:padding="8dp"
										android:orientation="vertical"
										android:layout_weight="1">
										<TextView
											android:id="@+id/disappearingTitle"
											android:layout_width="wrap_content"
											android:layout_height="wrap_content"
											android:text="Disappearing message"
											android:textSize="18sp"
											android:textColor="?attr/colorOnSurface" />
										<TextView
											android:id="@+id/disappearingSubtitle"
											android:layout_width="wrap_content"
											android:layout_height="wrap_content"
											android:layout_marginTop="5dp"
											android:text="24 hours"
											android:textSize="14sp"
											android:textColor="?attr/colorOnSurfaceVariant" />
									</LinearLayout>
									<com.google.android.material.materialswitch.MaterialSwitch
										android:id="@+id/switchDisappearingMessages"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:layout_marginLeft="3dp"
										android:layout_marginRight="10dp"
										android:textSize="12sp"
										android:textColor="?attr/colorOnSurface" />
								</LinearLayout>
								<LinearLayout
									android:id="@+id/savePhotoVideoMainSwitch"
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:layout_marginBottom="10dp"
									android:gravity="center_horizontal|center_vertical"
									android:orientation="horizontal"
									android:clickable="true"
									android:focusable="true"
									android:background="?attr/selectableItemBackground">
									<ImageView
										android:id="@+id/saveMediaIcon"
										android:layout_width="25dp"
										android:layout_height="25dp"
										android:layout_marginLeft="10dp"
										android:layout_marginRight="12dp"
										android:src="@drawable/file_save_24px"
										android:scaleType="fitCenter"
										app:tint="?attr/colorOnSurface" />
									<LinearLayout
										android:id="@+id/linear49"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:padding="8dp"
										android:orientation="vertical"
										android:layout_weight="1">
										<TextView
											android:id="@+id/saveMediaTitle"
											android:layout_width="wrap_content"
											android:layout_height="wrap_content"
											android:text="Save photos and videos"
