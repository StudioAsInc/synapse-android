					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="16dp"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="horizontal"
					android:padding="8dp" />

				<LinearLayout
