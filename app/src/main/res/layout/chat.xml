<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:id="@+id/_main">
	<com.synapse.social.studioasinc.CenterCropLinearLayoutNoEffect
		android:id="@+id/body"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/default_pattern"
		android:gravity="center_horizontal|center_vertical"
		android:orientation="vertical"
		android:animateLayoutChanges="true">
		<com.synapse.social.studioasinc.CenterCropLinearLayoutNoEffect
			android:id="@+id/top"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="8dp"
			android:paddingTop="3dp"
			android:paddingRight="8dp"
			android:paddingBottom="3dp"
			android:background="@drawable/app_bar"
			android:gravity="center_vertical"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/back"
				android:layout_width="48dp"
				android:layout_height="48dp"
				android:layout_marginRight="8dp"
				android:padding="12dp"
				android:src="@drawable/ic_arrow_back_ios_new_48px"
				android:scaleType="fitCenter" />
			<LinearLayout
				android:id="@+id/topProfileLayout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="horizontal">
				<androidx.cardview.widget.CardView
					android:id="@+id/topProfileCard"
					android:layout_width="44dp"
					android:layout_height="44dp"
					android:layout_marginRight="8dp"
					app:cardBackgroundColor="@android:color/transparent"
					app:cardElevation="0dp"
					app:cardCornerRadius="300dp">
					<ImageView
						android:id="@+id/topProfileLayoutProfileImage"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:src="@drawable/avatar"
						android:scaleType="centerCrop" />
				</androidx.cardview.widget.CardView>
				<LinearLayout
					android:id="@+id/topProfileLayoutRight"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingRight="8dp"
					android:gravity="center_vertical"
					android:orientation="vertical">
					<LinearLayout
						android:id="@+id/topProfileLayoutRightTop"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center_vertical"
						android:orientation="horizontal"
						android:layout_weight="1">
						<TextView
							android:id="@+id/topProfileLayoutUsername"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginRight="4dp"
							android:text="Name"
							android:textSize="16sp"
							android:textStyle="bold"
							android:textColor="#000000"
							android:singleLine="true"
							android:maxWidth="110dp" />
						<ImageView
							android:id="@+id/topProfileLayoutGenderBadge"
							android:layout_width="0dp"
							android:layout_height="16dp"
							android:layout_marginRight="4dp"
							android:src="@drawable/male_badge"
							android:scaleType="centerInside" />
						<ImageView
							android:id="@+id/topProfileLayoutVerifiedBadge"
							android:layout_width="16dp"
							android:layout_height="16dp"
							android:src="@drawable/verified_badge"
							android:scaleType="centerInside" />
					</LinearLayout>
					<TextView
						android:id="@+id/topProfileLayoutStatus"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="status"
						android:textSize="14sp"
						android:textColor="#000000"
						android:singleLine="true" />
				</LinearLayout>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/topProfileLayoutSpace"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_marginLeft="8dp"
				android:layout_marginRight="8dp"
				android:padding="8dp"
				android:orientation="vertical"
				android:layout_weight="1" />
			<ImageView
				android:id="@+id/ic_video_call"
				android:layout_width="35dp"
				android:layout_height="match_parent"
				android:padding="6dp"
				android:src="@drawable/ic_video_chat_48px"
				android:scaleType="fitCenter" />
			<ImageView
				android:id="@+id/ic_audio_call"
				android:layout_width="35dp"
				android:layout_height="match_parent"
				android:layout_marginLeft="10dp"
				android:layout_marginRight="10dp"
				android:padding="6dp"
				android:src="@drawable/ic_call_48px"
				android:scaleType="fitCenter" />
			<ImageView
				android:id="@+id/ic_more"
				android:layout_width="35dp"
				android:layout_height="match_parent"
				android:padding="6dp"
				android:src="@drawable/ic_info_48px"
				android:scaleType="fitCenter" />
		</com.synapse.social.studioasinc.CenterCropLinearLayoutNoEffect>
		<LinearLayout
			android:id="@+id/middle"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@android:color/transparent"
			android:orientation="vertical"
			android:layout_weight="1"
			android:animateLayoutChanges="true">
			<LinearLayout
				android:id="@+id/bannedUserInfo"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingTop="4dp"
				android:paddingBottom="4dp"
				android:background="@android:color/transparent"
				android:gravity="center_vertical"
				android:orientation="horizontal"
				android:visibility="gone">
				<ImageView
					android:id="@+id/bannedUserInfoIc"
					android:layout_width="24dp"
					android:layout_height="24dp"
					android:layout_marginLeft="18dp"
					android:layout_marginRight="18dp"
					android:src="@drawable/risk"
					android:scaleType="centerInside" />
				<TextView
					android:id="@+id/bannedUserInfoText"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginRight="18dp"
					android:text="This user's account has been suspended."
					android:textSize="16sp"
					android:textColor="#000000" />
			</LinearLayout>
			<androidx.recyclerview.widget.RecyclerView
				android:id="@+id/ChatMessagesListRecycler"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@android:color/transparent"
				android:listSelector="@drawable/no_highlight"
				tools:listitem="@layout/chat_msg_cv_synapse" />
			<TextView
				android:id="@+id/noChatText"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:padding="8dp"
				android:background="@android:color/transparent"
				android:gravity="center_horizontal|center_vertical"
				android:text="No previous conversation"
				android:textSize="18sp"
				android:textColor="#757575" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/bottomSpace"
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:padding="8dp"
			android:background="#F5F5F5"
			android:orientation="horizontal" />
		<LinearLayout
			android:id="@+id/mMessageReplyLayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:visibility="gone">
			<com.synapse.social.studioasinc.CenterCropLinearLayoutNoEffect
				android:id="@+id/mMessageReplyLayoutBody"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:background="@drawable/app_bar"
				android:orientation="horizontal">
				<ImageView
					android:id="@+id/mMessageReplyLayoutBodyIc"
					android:layout_width="44dp"
					android:layout_height="44dp"
					android:layout_marginRight="8dp"
					android:padding="10dp"
					android:src="@drawable/ic_reply_48px"
					android:scaleType="centerCrop" />
				<LinearLayout
					android:id="@+id/mMessageReplyLayoutBodyRight"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:gravity="center_vertical"
					android:orientation="vertical"
					android:layout_weight="1">
					<TextView
						android:id="@+id/mMessageReplyLayoutBodyRightUsername"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Username"
						android:textSize="14sp"
						android:textColor="#445E91"
						android:singleLine="true" />
					<TextView
						android:id="@+id/mMessageReplyLayoutBodyRightMessage"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Message"
						android:textSize="14sp"
						android:textStyle="bold"
						android:textColor="#616161"
						android:singleLine="true" />
				</LinearLayout>
				<ImageView
					android:id="@+id/mMessageReplyLayoutBodyCancel"
					android:layout_width="44dp"
					android:layout_height="44dp"
					android:layout_marginLeft="8dp"
					android:padding="10dp"
					android:src="@drawable/ic_close_48px"
					android:scaleType="centerCrop" />
			</com.synapse.social.studioasinc.CenterCropLinearLayoutNoEffect>
			<LinearLayout
				android:id="@+id/mMessageReplyLayoutSpace"
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:padding="8dp"
				android:background="#F5F5F5"
				android:orientation="horizontal" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/message_input_overall_container"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			android:paddingBottom="8dp"
			android:background="@android:color/transparent"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal"
			android:animateLayoutChanges="true">
			<LinearLayout
				android:id="@+id/message_input_outlined_round"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="3dp"
				android:background="#FFFFFF"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="vertical"
				android:layout_weight="1"
				android:animateLayoutChanges="true">
				<LinearLayout
					android:id="@+id/img_container_layout"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="10dp"
					android:layout_marginTop="10dp"
					android:gravity="center_vertical"
					android:orientation="horizontal">
					<androidx.cardview.widget.CardView
						android:id="@+id/imgRoundLayout"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						app:cardElevation="0dp"
						app:cardCornerRadius="20dp">
						<ImageView
							android:id="@+id/selected_img_preview"
							android:layout_width="70dp"
							android:layout_height="70dp"
							android:src="@drawable/avatar"
							android:scaleType="centerCrop" />
					</androidx.cardview.widget.CardView>
					<ImageView
						android:id="@+id/remove_selected_img_icon"
						android:layout_width="23dp"
						android:layout_height="23dp"
						android:src="@drawable/ic_close_48px"
						android:scaleType="fitCenter"
						android:translationX="-23.0dp"
						android:translationY="-23.0dp" />
					<LinearLayout
						android:id="@+id/img_name_container"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:gravity="left|center_vertical"
						android:orientation="vertical"
						android:translationX="-15.0dp">
						<TextView
							android:id="@+id/img_name"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="Image.png"
							android:textSize="14sp"
							android:textColor="#424242"
							android:maxLength="50" />
						<ProgressBar
							android:id="@+id/img_upload_prog"
							android:layout_width="match_parent"
							android:layout_height="20dp"
							style="?android:progressBarStyleHorizontal"
							android:indeterminate="false"
							android:progress="0" />
					</LinearLayout>
				</LinearLayout>
				<com.synapse.social.studioasinc.FadeEditText
					android:id="@+id/message_et"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginLeft="7dp"
					android:padding="8dp"
					android:background="@android:color/transparent"
					android:gravity="center_vertical"
					android:textSize="18sp"
					android:textColor="#000000"
					android:hint="Write a message"
					android:textColorHint="#607D8B"
					android:layout_weight="1"
					android:maxHeight="180dp" />
				<LinearLayout
					android:id="@+id/camera_gallery_btn_container_round"
					android:layout_width="wrap_content"
					android:layout_height="60dp"
					android:paddingLeft="22dp"
					android:paddingTop="12dp"
					android:paddingRight="22dp"
					android:paddingBottom="12dp"
					android:background="#F0F3F8"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="horizontal"
					android:elevation="1dp">
					<ImageView
						android:id="@+id/expand_send_type_btn"
						android:layout_width="20dp"
						android:layout_height="match_parent"
						android:src="@drawable/iconss_1"
						android:scaleType="fitCenter" />
					<LinearLayout
						android:id="@+id/devider_mic_camera"
						android:layout_width="1dp"
						android:layout_height="20dp"
						android:layout_marginLeft="18dp"
						android:layout_marginRight="18dp"
						android:padding="8dp"
						android:background="#BDBDBD"
						android:orientation="horizontal" />
					<ImageView
						android:id="@+id/gallery_btn"
						android:layout_width="20dp"
						android:layout_height="25dp"
						android:src="@drawable/icons_2"
						android:scaleType="fitCenter" />
					<LinearLayout
						android:id="@+id/devider"
						android:layout_width="1dp"
						android:layout_height="20dp"
						android:layout_marginLeft="18dp"
						android:layout_marginRight="18dp"
						android:padding="8dp"
						android:background="#BDBDBD"
						android:orientation="horizontal" />
					<ImageView
						android:id="@+id/attachment_btn"
						android:layout_width="20dp"
						android:layout_height="25dp"
						android:src="@drawable/ic_attach_file_add_48px"
						android:scaleType="fitCenter" />
					<LinearLayout
						android:id="@+id/devider1"
						android:layout_width="1dp"
						android:layout_height="20dp"
						android:layout_marginLeft="18dp"
						android:layout_marginRight="18dp"
						android:padding="8dp"
						android:background="#BDBDBD"
						android:orientation="horizontal" />
					<ImageView
						android:id="@+id/send_type_voice_btn"
						android:layout_width="20dp"
						android:layout_height="25dp"
						android:src="@drawable/ic_mic_48px"
						android:scaleType="fitCenter" />
					<LinearLayout
						android:id="@+id/devider2"
						android:layout_width="1dp"
						android:layout_height="20dp"
						android:layout_marginLeft="18dp"
						android:layout_marginRight="18dp"
						android:padding="8dp"
						android:background="#BDBDBD"
						android:orientation="horizontal" />
					<ImageView
						android:id="@+id/more_send_type_btn"
						android:layout_width="20dp"
						android:layout_height="25dp"
						android:src="@drawable/iconss_5"
						android:scaleType="fitCenter" />
				</LinearLayout>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/send_round_btn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="13dp"
				android:padding="5dp"
				android:background="#F0F3F8"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="horizontal">
				<ImageView
					android:id="@+id/send_ic"
					android:layout_width="44dp"
					android:layout_height="44dp"
					android:padding="10dp"
					android:background="@android:color/transparent"
					android:src="@drawable/ic_thumb_up_48px"
					android:scaleType="fitCenter" />
			</LinearLayout>
		</LinearLayout>
		<com.synapse.social.studioasinc.CenterCropLinearLayoutNoEffect
			android:id="@+id/bottomAudioRecorder"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:background="@drawable/app_bar"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal"
			android:visibility="gone"
			android:animateLayoutChanges="true">
			<ImageView
				android:id="@+id/bottomAudioRecorderCancel"
				android:layout_width="44dp"
				android:layout_height="44dp"
				android:padding="10dp"
				android:src="@drawable/ic_close_48px"
				android:scaleType="fitCenter" />
			<TextView
				android:id="@+id/bottomAudioRecorderTime"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="center_horizontal|center_vertical"
				android:text="00:00"
				android:textSize="16sp"
				android:textColor="#000000"
				android:layout_weight="1" />
			<ImageView
				android:id="@+id/bottomAudioRecorderSend"
				android:layout_width="44dp"
				android:layout_height="44dp"
				android:padding="8dp"
				android:background="#F0F3F8"
				android:src="@drawable/icons_3"
				android:scaleType="fitCenter" />
		</com.synapse.social.studioasinc.CenterCropLinearLayoutNoEffect>
		<TextView
			android:id="@+id/unblock_btn"
			android:layout_width="match_parent"
			android:layout_height="65dp"
			android:paddingLeft="10dp"
			android:paddingTop="15dp"
			android:paddingRight="10dp"
			android:paddingBottom="15dp"
			android:background="@color/colorPrimary"
			android:gravity="center_horizontal|center_vertical"
			android:text="Unblock"
			android:textSize="18sp"
			android:textStyle="bold"
			android:textColor="#FFFFFF"
			android:visibility="gone" />
		<TextView
			android:id="@+id/blocked_txt"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="10dp"
			android:background="@color/colorPrimary"
			android:gravity="center_horizontal|bottom"
			android:text="You can't reply to this conversation. Learn more"
			android:textSize="14sp"
			android:textColor="#FFFFFF"
			android:visibility="gone" />
	</com.synapse.social.studioasinc.CenterCropLinearLayoutNoEffect>
</LinearLayout>
