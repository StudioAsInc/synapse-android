<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:id="@+id/_main">
	<LinearLayout
		android:id="@+id/body"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#FFFFFF"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/top"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="8dp"
			android:paddingTop="3dp"
			android:paddingRight="8dp"
			android:paddingBottom="3dp"
			android:gravity="center_vertical"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/back"
				android:layout_width="48dp"
				android:layout_height="48dp"
				android:layout_marginRight="8dp"
				android:padding="12dp"
				android:src="@drawable/ic_arrow_back_black"
				android:scaleType="fitCenter" />
			<LinearLayout
				android:id="@+id/topProfileLayout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="horizontal">
				<androidx.cardview.widget.CardView
					android:id="@+id/topProfileCard"
					android:layout_width="44dp"
					android:layout_height="44dp"
					android:layout_marginRight="8dp"
					app:cardElevation="0dp">
					<ImageView
						android:id="@+id/topProfileLayoutProfileImage"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:src="@drawable/avatar"
						android:scaleType="centerCrop" />
				</androidx.cardview.widget.CardView>
				<LinearLayout
					android:id="@+id/topProfileLayoutRight"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingRight="8dp"
					android:gravity="center_vertical"
					android:orientation="vertical">
					<LinearLayout
						android:id="@+id/topProfileLayoutRightTop"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center_vertical"
						android:orientation="horizontal"
						android:layout_weight="1">
						<TextView
							android:id="@+id/topProfileLayoutUsername"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginRight="4dp"
							android:text="NAME"
							android:textSize="18sp"
							android:textStyle="bold"
							android:textColor="#000000"
							android:singleLine="true"
							android:maxWidth="140dp" />
						<ImageView
							android:id="@+id/topProfileLayoutGenderBadge"
							android:layout_width="0dp"
							android:layout_height="16dp"
							android:layout_marginRight="4dp"
							android:src="@drawable/male_badge"
							android:scaleType="centerInside" />
						<ImageView
							android:id="@+id/topProfileLayoutVerifiedBadge"
							android:layout_width="16dp"
							android:layout_height="16dp"
							android:src="@drawable/verified_badge"
							android:scaleType="centerInside" />
					</LinearLayout>
					<TextView
						android:id="@+id/topProfileLayoutUsername2"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Waiting for Internet connection..."
						android:textSize="14sp"
						android:textColor="#757575"
						android:singleLine="true" />
				</LinearLayout>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/topProfileLayoutSpace"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_marginLeft="8dp"
				android:layout_marginRight="8dp"
				android:padding="8dp"
				android:orientation="vertical"
				android:layout_weight="1" />
			<ImageView
				android:id="@+id/more"
				android:layout_width="48dp"
				android:layout_height="48dp"
				android:padding="12dp"
				android:src="@drawable/default_image"
				android:scaleType="fitCenter" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/topSpace"
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:padding="8dp"
			android:background="#F5F5F5"
			android:orientation="horizontal" />
		<LinearLayout
			android:id="@+id/m_coordinator_layout"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/m_coordinator_layout_appbar"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:background="@null"
				app:elevation="0dp">
				<LinearLayout
					android:id="@+id/m_coordinator_layout_collapsing_toolbar"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:background="#FFFFFF"
					android:orientation="vertical"
					app:layout_scrollFlags="scroll|enterAlways">
					<LinearLayout
						android:id="@+id/m_coordinator_layout_collapsing_toolbar_body"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:paddingLeft="16dp"
						android:paddingTop="12dp"
						android:paddingRight="16dp"
						android:paddingBottom="12dp"
						android:background="@android:color/transparent"
						android:orientation="horizontal">
						<TextView
							android:id="@+id/tab_followers"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingLeft="14dp"
							android:paddingTop="6dp"
							android:paddingRight="14dp"
							android:paddingBottom="6dp"
							android:background="#000000"
							android:textSize="16sp"
							android:textColor="#FFFFFF"
							tools:replace="android:text"
							android:text="@string/followers" />
						<TextView
							android:id="@+id/tab_followings"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="16dp"
							android:paddingLeft="14dp"
							android:paddingTop="6dp"
							android:paddingRight="14dp"
							android:paddingBottom="6dp"
							android:textSize="16sp"
							android:textColor="#616161"
							tools:replace="android:text"
							android:text="@string/following" />
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>
			<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
				android:id="@+id/swipe_layout"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
				<LinearLayout
					android:id="@+id/swipe_layout_body"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="vertical">
					<LinearLayout
						android:id="@+id/followers_layout"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:orientation="vertical">
						<androidx.recyclerview.widget.RecyclerView
							android:id="@+id/followers_layout_list"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							tools:listitem="@layout/user_followers_list" />
						<TextView
							android:id="@+id/followers_layout_no_followers"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:padding="8dp"
							android:gravity="center_horizontal|center_vertical"
							android:textSize="16sp"
							android:textColor="#757575"
							tools:replace="android:text"
							android:text="@string/no_followers" />
						<LinearLayout
							android:id="@+id/followers_layout_loading"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:padding="8dp"
							android:gravity="center_horizontal|center_vertical"
							android:orientation="horizontal">
							<ProgressBar
								android:id="@+id/followers_layout_loading_bar"
								android:layout_width="24dp"
								android:layout_height="24dp"
								android:indeterminate="false"
								style="?android:progressBarStyle" />
						</LinearLayout>
					</LinearLayout>
					<LinearLayout
						android:id="@+id/following_layout"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:orientation="vertical">
						<androidx.recyclerview.widget.RecyclerView
							android:id="@+id/following_layout_list"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							tools:listitem="@layout/user_followers_list" />
						<TextView
							android:id="@+id/following_layout_no_follow"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:padding="8dp"
							android:gravity="center_horizontal|center_vertical"
							android:textSize="16sp"
							android:textColor="#757575"
							tools:replace="android:text"
							android:text="@string/no_followed" />
						<LinearLayout
							android:id="@+id/following_layout_loading"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:padding="8dp"
							android:gravity="center_horizontal|center_vertical"
							android:orientation="horizontal">
							<ProgressBar
								android:id="@+id/following_layout_loading_bar"
								android:layout_width="24dp"
								android:layout_height="24dp"
								android:indeterminate="false"
								style="?android:progressBarStyle" />
						</LinearLayout>
					</LinearLayout>
				</LinearLayout>
			</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/mLoadingLayout"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:padding="8dp"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal">
			<ProgressBar
				android:id="@+id/mLoadingLayoutBar"
				android:layout_width="24dp"
				android:layout_height="24dp"
				android:indeterminate="false"
				style="?android:progressBarStyle" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
