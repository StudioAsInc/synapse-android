<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/main"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/popup_layout"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			<androidx.cardview.widget.CardView
				android:id="@+id/menu_card"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="56dp"
				android:layout_marginTop="75dp"
				android:layout_marginRight="56dp"
				android:layout_marginBottom="75dp"
				app:cardElevation="1dp"
				app:cardCornerRadius="14dp">
				<LinearLayout
					android:id="@+id/body"
					android:layout_width="190dp"
					android:layout_height="wrap_content"
					android:background="#FFFFFF"
					android:orientation="vertical">
					<LinearLayout
						android:id="@+id/reaction_layout"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal">
						<HorizontalScrollView
							android:id="@+id/hscroll1"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:scrollbars="none">
							<LinearLayout
								android:id="@+id/reactions_container"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:padding="8dp"
								android:orientation="horizontal">
								<TextView
									android:id="@+id/love"
									android:focusable="false"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_marginLeft="8dp"
									android:layout_marginRight="8dp"
									android:text="â¤ï¸"
									android:textSize="25sp"
									android:textColor="#000000" />
								<TextView
									android:id="@+id/fire"
									android:focusable="false"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_marginLeft="8dp"
									android:layout_marginRight="8dp"
									android:text="ðŸ”¥"
									android:textSize="25sp"
									android:textColor="#000000" />
								<TextView
									android:id="@+id/like"
									android:focusable="false"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_marginLeft="8dp"
									android:layout_marginRight="8dp"
									android:text="ðŸ‘"
									android:textSize="25sp"
									android:textColor="#000000" />
								<TextView
									android:id="@+id/HundredPerCent"
									android:focusable="false"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_marginLeft="8dp"
									android:layout_marginRight="8dp"
									android:text="ðŸ’¯"
									android:textSize="25sp"
									android:textColor="#000000" />
								<TextView
									android:id="@+id/Jocker"
									android:focusable="false"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_marginLeft="8dp"
									android:layout_marginRight="8dp"
									android:text="ðŸ¤¡"
									android:textSize="25sp"
									android:textColor="#000000" />
								<TextView
									android:id="@+id/Dislike"
									android:focusable="false"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_marginLeft="8dp"
									android:layout_marginRight="8dp"
									android:text="ðŸ‘Ž"
									android:textSize="25sp"
									android:textColor="#000000" />
								<TextView
									android:id="@+id/Cool"
									android:focusable="false"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_marginLeft="8dp"
									android:layout_marginRight="8dp"
									android:text="ðŸ˜Ž"
									android:textSize="25sp"
									android:textColor="#000000" />
							</LinearLayout>
						</HorizontalScrollView>
					</LinearLayout>
					<LinearLayout
						android:id="@+id/edit"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:paddingLeft="8dp"
						android:paddingTop="6dp"
						android:paddingRight="8dp"
						android:paddingBottom="6dp"
						android:background="#FFFFFF"
						android:gravity="center_vertical"
						android:orientation="horizontal">
						<ImageView
							android:id="@+id/edit_icon"
							android:focusable="false"
							android:layout_width="38dp"
							android:layout_height="38dp"
							android:padding="8dp"
							android:src="@drawable/ic_edit_note_48px"
							android:scaleType="fitCenter" />
						<TextView
							android:id="@+id/edit_title"
							android:focusable="false"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="8dp"
							android:textSize="20sp"
							android:textColor="#000000"
							tools:replace="android:text"
							android:text="@string/m_edit" />
					</LinearLayout>
					<LinearLayout
						android:id="@+id/reply"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:paddingLeft="8dp"
						android:paddingTop="6dp"
						android:paddingRight="8dp"
						android:paddingBottom="6dp"
						android:background="#FFFFFF"
						android:gravity="center_vertical"
						android:orientation="horizontal">
						<ImageView
							android:id="@+id/reply_icon"
							android:focusable="false"
							android:layout_width="38dp"
							android:layout_height="38dp"
							android:padding="8dp"
							android:src="@drawable/ic_reply"
							android:scaleType="fitCenter" />
						<TextView
							android:id="@+id/reply_title"
							android:focusable="false"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="8dp"
							android:textSize="20sp"
							android:textColor="#000000"
							tools:replace="android:text"
							android:text="@string/m_reply" />
					</LinearLayout>
					<LinearLayout
						android:id="@+id/copy"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:paddingLeft="8dp"
						android:paddingTop="6dp"
						android:paddingRight="8dp"
						android:paddingBottom="6dp"
						android:background="#FFFFFF"
						android:gravity="center_vertical"
						android:orientation="horizontal">
						<ImageView
							android:id="@+id/copy_icon"
							android:focusable="false"
							android:layout_width="38dp"
							android:layout_height="38dp"
							android:padding="8dp"
							android:src="@drawable/ic_content_copy_48px"
							android:scaleType="fitCenter" />
						<TextView
							android:id="@+id/copy_title"
							android:focusable="false"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="8dp"
							android:textSize="20sp"
							android:textColor="#000000"
							tools:replace="android:text"
							android:text="@string/m_copy" />
					</LinearLayout>
					<LinearLayout
						android:id="@+id/delete"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:paddingLeft="8dp"
						android:paddingTop="6dp"
						android:paddingRight="8dp"
						android:paddingBottom="6dp"
						android:background="#FFFFFF"
						android:gravity="center_vertical"
						android:orientation="horizontal">
						<ImageView
							android:id="@+id/delete_icon"
							android:focusable="false"
							android:layout_width="38dp"
							android:layout_height="38dp"
							android:padding="8dp"
							android:src="@drawable/ic_delete_48px"
							android:scaleType="fitCenter" />
						<TextView
							android:id="@+id/delete_title"
							android:focusable="false"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:padding="8dp"
							android:textSize="20sp"
							android:textColor="#000000"
							tools:replace="android:text"
							android:text="@string/m_delete" />
					</LinearLayout>
				</LinearLayout>
			</androidx.cardview.widget.CardView>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
