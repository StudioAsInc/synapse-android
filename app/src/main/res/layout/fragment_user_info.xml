<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ProfilePageTabUserInfo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">
    <LinearLayout
        android:id="@+id/ProfilePageTabUserInfoBody"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorSurface"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ProfilePageTabUserInfoCoverLayout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="8dp"
            android:background="?attr/colorSurfaceVariant"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ProfilePageTabUserInfoCoverImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/user_null_cover_photo"
                android:scaleType="centerCrop" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/prfLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:translationY="-80.0dp">
            <LinearLayout
                android:id="@+id/ProfilePageTabUserInfoCardLayout"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginLeft="18dp"
                android:padding="2dp"
                android:background="@android:color/transparent"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:id="@+id/ProfilePageTabUserInfoProfileCard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardElevation="10dp"
                    app:cardCornerRadius="100dp">
                    <ImageView
                        android:id="@+id/ProfilePageTabUserInfoProfileImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ph_imgbluredsqure"
                        android:scaleType="centerCrop" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/prfLaySpc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="18dp"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/likeUserProfileButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="18dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:background="?attr/colorSurface"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/likeUserProfileButtonIc"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:padding="3dp"
                        android:src="@drawable/post_icons_1_1"
                        android:scaleType="centerInside" />
                    <TextView
                        android:id="@+id/likeUserProfileButtonLikeCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="8dp"
                        android:text="0"
                        android:textSize="18sp"
                        android:textColor="?android:attr/textColorSecondary" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ProfilePageTabUserInfoLayoutMarg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="18dp"
            android:paddingTop="8dp"
            android:paddingRight="18dp"
            android:paddingBottom="18dp"
            android:orientation="vertical"
            android:translationY="-68.0dp">
            <LinearLayout
                android:id="@+id/ProfilePageTabUserInfoNameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/ProfilePageTabUserInfoNickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:singleLine="true"
                    android:maxWidth="250dp"
                    android:fontFamily="@font/product_sans" />
            </LinearLayout>
            <TextView
                android:id="@+id/ProfilePageTabUserInfoBioLayoutText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/text_loading"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurface" />
            <LinearLayout
                android:id="@+id/ProfilePageTabUserInfoStateDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/ProfilePageTabUserInfoUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/text_loading"
                    android:textSize="16sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:singleLine="true"
                    android:maxWidth="300dp" />
                <TextView
                    android:id="@+id/ProfilePageTabUserInfoStateSpc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="|"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary" />
                <TextView
                    android:id="@+id/ProfilePageTabUserInfoStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/text_loading"
                    android:textSize="16sp"
                    android:textColor="?android:attr/textColorSecondary" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ProfilePageTabUserInfoFollowsDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/ProfilePageTabUserInfoFollowersCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/text_loading"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary" />
                <TextView
                    android:id="@+id/ProfilePageTabUserInfoSpc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="|"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary" />
                <TextView
                    android:id="@+id/ProfilePageTabUserInfoFollowingCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/text_loading"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary" />
            </LinearLayout>
            <com.google.android.material.button.MaterialButtonGroup
                android:id="@+id/ProfilePageTabUserInfoSecondaryButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnFollow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Follow"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnPrimary"
                    android:layout_weight="1"
                    style="@style/Widget.Material3Expressive.Button"
                    android:fontFamily="@font/product_sans" />
                <Button
                    android:id="@+id/btnMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Message"
                    android:textSize="16sp"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_weight="1"
                    android:fontFamily="@font/product_sans"
                    style="@style/Widget.Material3.Button.TonalButton.Icon" />
            </com.google.android.material.button.MaterialButtonGroup>
            <Button
                android:id="@+id/btnEditProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:padding="8dp"
                android:text="Edit profile"
                android:textSize="16sp"
                android:textColor="@color/md_theme_onSurface"
                android:fontFamily="@font/product_sans"
                style="@style/Widget.Material3.Button.TonalButton.Icon" />
            <LinearLayout
                android:id="@+id/join_date_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/join_date_layout_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Joined on"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_weight="1"
                    android:fontFamily="@font/product_sans" />
                <TextView
                    android:id="@+id/join_date_layout_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_loading"
                    android:textColor="?android:attr/textColorSecondary"
                    tools:replace="android:textSize"
                    android:textSize="14dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/user_uid_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/user_uid_layout_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UID "
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorSecondary"
                    android:layout_weight="1"
                    android:fontFamily="@font/product_sans" />
                <TextView
                    android:id="@+id/user_uid_layout_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_loading"
                    android:textColor="?android:attr/textColorSecondary"
                    tools:replace="android:textSize"
                    android:textSize="14dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
