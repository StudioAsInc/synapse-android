<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<RelativeLayout
		android:id="@+id/body"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<FrameLayout
			android:id="@+id/middle"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center_vertical"
			android:orientation="horizontal">
			<VideoView
				android:id="@+id/videoView"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_gravity="center_horizontal|center_vertical" />
		</FrameLayout>
		<LinearLayout
			android:id="@+id/mediaPlayerControllers"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/playPauseButton"
				android:layout_width="75dp"
				android:layout_height="75dp"
				android:padding="12dp"
				android:src="@drawable/play_ic"
				android:scaleType="fitCenter"
				android:focusable="false" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/buttonsRelative"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="bottom"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/buttonsRelativeBottom"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="bottom"
				android:orientation="vertical">
				<LinearLayout
					android:id="@+id/postInfosLayout"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="bottom"
					android:orientation="horizontal">
					<LinearLayout
						android:id="@+id/buttonsRelativeBottomMD"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="12dp"
						android:orientation="vertical"
						android:layout_weight="1">
						<LinearLayout
							android:id="@+id/buttonsRelativeBottomUserInf"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginBottom="8dp"
							android:gravity="center_vertical"
							android:orientation="horizontal">
							<androidx.cardview.widget.CardView
								android:id="@+id/profileCard"
								android:layout_width="34dp"
								android:layout_height="34dp"
								android:layout_marginRight="8dp"
								app:cardElevation="0dp">
								<ImageView
									android:id="@+id/profileCardImage"
									android:layout_width="match_parent"
									android:layout_height="match_parent"
									android:src="@drawable/avatar"
									android:scaleType="centerCrop"
									android:focusable="false" />
							</androidx.cardview.widget.CardView>
							<LinearLayout
								android:id="@+id/buttonsRelativeBottomUserInfMiniRight"
								android:layout_width="wrap_content"
								android:layout_height="20dp"
								android:gravity="center_horizontal|center_vertical"
								android:orientation="horizontal">
								<TextView
									android:id="@+id/buttonsRelativeBottomUserInfUsername"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_marginRight="4dp"
									android:text="@username"
									android:textSize="18sp"
									android:textStyle="bold"
									android:textColor="#FFFFFF"
									android:singleLine="true"
									android:layout_weight="1"
									android:focusable="false"
									android:maxWidth="150dp"
									android:fontFamily="@font/product_sans" />
								<ImageView
									android:id="@+id/buttonsRelativeBottomUserInfGenderBadge"
									android:layout_width="16dp"
									android:layout_height="16dp"
									android:layout_marginTop="1dp"
									android:layout_marginRight="4dp"
									android:src="@drawable/male_badge"
									android:scaleType="centerInside"
									android:focusable="false" />
								<ImageView
									android:id="@+id/buttonsRelativeBottomUserInfVerifiedBadge"
									android:layout_width="16dp"
									android:layout_height="16dp"
									android:layout_marginTop="1dp"
									android:layout_marginRight="2dp"
									android:src="@drawable/verified_badge"
									android:scaleType="fitCenter"
									android:focusable="false" />
							</LinearLayout>
						</LinearLayout>
						<TextView
							android:id="@+id/postDescription"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="16sp"
							android:textColor="#FFFFFF"
							android:focusable="false"
							tools:replace="android:text"
							android:fontFamily="@font/product_sans" />
					</LinearLayout>
					<LinearLayout
						android:id="@+id/buttonsRelativeTop"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="12dp"
						android:gravity="right|bottom"
						android:orientation="vertical">
						<LinearLayout
							android:id="@+id/likeButton"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginBottom="8dp"
							android:gravity="center_horizontal|center_vertical"
							android:orientation="vertical">
							<ImageView
								android:id="@+id/likeButtonIc"
								android:layout_width="48dp"
								android:layout_height="48dp"
								android:padding="8dp"
								android:src="@drawable/line_video_player_icons_2"
								android:scaleType="fitCenter"
								android:focusable="false" />
							<TextView
								android:id="@+id/likeButtonCount"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="0"
								android:textSize="18sp"
								android:textStyle="bold"
								android:textColor="#FFFFFF"
								android:focusable="false"
								android:fontFamily="@font/product_sans" />
						</LinearLayout>
						<LinearLayout
							android:id="@+id/commentsButton"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginBottom="8dp"
							android:gravity="center_horizontal|center_vertical"
							android:orientation="vertical">
							<ImageView
								android:id="@+id/commentsButtonIc"
								android:layout_width="48dp"
								android:layout_height="48dp"
								android:padding="8dp"
								android:src="@drawable/ic_chat_48px"
								android:scaleType="fitCenter"
								android:focusable="false" />
							<TextView
								android:id="@+id/commentsButtonCount"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="0"
								android:textSize="18sp"
								android:textStyle="bold"
								android:textColor="#FFFFFF"
								android:focusable="false"
								android:fontFamily="@font/product_sans" />
						</LinearLayout>
						<LinearLayout
							android:id="@+id/shareButton"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginBottom="8dp"
							android:gravity="center_horizontal|center_vertical"
							android:orientation="vertical">
							<ImageView
								android:id="@+id/shareButtonIc"
								android:layout_width="48dp"
								android:layout_height="48dp"
								android:padding="8dp"
								android:src="@drawable/ic_forward"
								android:scaleType="fitCenter"
								android:focusable="false" />
							<TextView
								android:id="@+id/shareButtonCount"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="0"
								android:textSize="18sp"
								android:textStyle="bold"
								android:textColor="#FFFFFF"
								android:focusable="false"
								android:fontFamily="@font/product_sans" />
						</LinearLayout>
						<LinearLayout
							android:id="@+id/addFavoriteButton"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:gravity="center_horizontal|center_vertical"
							android:orientation="vertical">
							<ImageView
								android:id="@+id/addFavoriteButtonIc"
								android:layout_width="48dp"
								android:layout_height="48dp"
								android:padding="8dp"
								android:src="@drawable/ic_bookmark"
								android:scaleType="fitCenter"
								android:focusable="false" />
							<TextView
								android:id="@+id/addFavoriteButtonCount"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="0"
								android:textSize="18sp"
								android:textStyle="bold"
								android:textColor="#FFFFFF"
								android:focusable="false"
								android:fontFamily="@font/product_sans" />
						</LinearLayout>
					</LinearLayout>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/videoMusicInfo"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:background="#212121"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="horizontal">
					<TextView
						android:id="@+id/videoMusicInfoTitle"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textSize="16sp"
						android:textColor="#9E9E9E"
						android:layout_weight="1"
						android:focusable="false"
						tools:replace="android:text"
						android:fontFamily="@font/product_sans" />
					<ImageView
						android:id="@+id/videoMusicInfoIc"
						android:layout_width="24dp"
						android:layout_height="24dp"
						android:src="@drawable/ic_audiotrack_black"
						android:scaleType="centerInside"
						android:focusable="false" />
				</LinearLayout>
			</LinearLayout>
			<SeekBar
				android:id="@+id/videoSeek"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="8dp"
				android:paddingRight="8dp"
				android:focusable="false" />
		</LinearLayout>
	</RelativeLayout>
</LinearLayout>
