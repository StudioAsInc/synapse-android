<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/main"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="16dp"
		android:gravity="center_horizontal|center_vertical"
		android:orientation="vertical">
		<androidx.cardview.widget.CardView
			android:id="@+id/dialog_card"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:cardBackgroundColor="#FFFFFF"
			app:cardElevation="0dp">
			<LinearLayout
				android:id="@+id/dialog_card_body"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">
				<LinearLayout
					android:id="@+id/dialog_top"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="14dp"
					android:orientation="horizontal">
					<TextView
						android:id="@+id/dialog_top_title"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:paddingLeft="8dp"
						android:paddingTop="4dp"
						android:paddingRight="8dp"
						android:paddingBottom="4dp"
						android:gravity="center_horizontal|center_vertical"
						android:text="Add Cover Image"
						android:textSize="18sp"
						android:textStyle="bold"
						android:textColor="#000000"
						android:focusable="false" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/dialog_top_spc"
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:padding="8dp"
					android:background="#F5F5F5"
					android:orientation="horizontal" />
				<LinearLayout
					android:id="@+id/dialog_middle"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:padding="14dp"
					android:gravity="center_horizontal"
					android:orientation="vertical"
					android:layout_weight="1">
					<androidx.cardview.widget.CardView
						android:id="@+id/user_avatar_card"
						android:layout_width="match_parent"
						android:layout_height="150dp"
						app:cardElevation="4dp">
						<ImageView
							android:id="@+id/user_avatar_image"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:src="@drawable/user_null_cover_photo"
							android:scaleType="centerCrop"
							android:focusable="false" />
					</androidx.cardview.widget.CardView>
					<EditText
						android:id="@+id/user_avatar_url_input"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="14dp"
						android:padding="14dp"
						android:background="#F5F5F5"
						android:textSize="18sp"
						android:textColor="#000000"
						android:hint="Enter Image URL"
						android:textColorHint="#9E9E9E"
						android:singleLine="true"
						android:inputType="textUri"
						android:focusable="true"
						android:focusableInTouchMode="true" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/dialog_bottom_spc"
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:padding="8dp"
					android:background="#F5F5F5"
					android:orientation="horizontal" />
				<LinearLayout
					android:id="@+id/dialog_bottom"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="14dp"
					android:orientation="vertical">
					<TextView
						android:id="@+id/add_button"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:paddingTop="8dp"
						android:paddingBottom="8dp"
						android:background="#445E91"
						android:gravity="center_horizontal|center_vertical"
						android:text="Download"
						android:textSize="18sp"
						android:textStyle="bold"
						android:textColor="#FFFFFF"
						android:focusable="false" />
					<TextView
						android:id="@+id/cancel_button"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="14dp"
						android:paddingTop="8dp"
						android:paddingBottom="8dp"
						android:background="#F5F5F5"
						android:gravity="center_horizontal|center_vertical"
						android:text="Cancel"
						android:textSize="18sp"
						android:textColor="#000000"
						android:focusable="false" />
				</LinearLayout>
			</LinearLayout>
		</androidx.cardview.widget.CardView>
	</LinearLayout>
</LinearLayout>
