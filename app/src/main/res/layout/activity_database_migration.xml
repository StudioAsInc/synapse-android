<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/md_theme_background">

    <!-- Migration Body -->
    <LinearLayout
        android:id="@+id/migrationBody"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/ic_database_migration"
            android:contentDescription="Database Migration" />

        <TextView
            android:id="@+id/migrationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Database Migration Required"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/md_theme_onBackground" />

        <TextView
            android:id="@+id/migrationDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="We're upgrading our database to provide better performance and scalability. This migration will move your data to our new Firestore database. The process is safe and your data will be preserved."
            android:textSize="16sp"
            android:textColor="@color/md_theme_onSurfaceVariant"
            android:lineSpacingExtra="4dp" />

        <Button
            android:id="@+id/startMigrationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Migration"
            android:textSize="16sp"
            android:paddingHorizontal="32dp"
            android:paddingVertical="12dp"
            android:background="@drawable/button_primary"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <!-- Loading Body -->
    <LinearLayout
        android:id="@+id/migrationLoadingBody"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="24dp"
            android:indeterminate="true" />

        <TextView
            android:id="@+id/migrationProgressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Starting migration..."
            android:textSize="18sp"
            android:textColor="@color/md_theme_onBackground" />

        <ProgressBar
            android:id="@+id/migrationProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginHorizontal="32dp"
            android:max="100"
            android:progress="0" />

    </LinearLayout>

    <!-- Success Body -->
    <LinearLayout
        android:id="@+id/migrationSuccessBody"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/ic_check_circle"
            android:contentDescription="Migration Success" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Migration Completed!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/md_theme_tertiary" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="Your data has been successfully migrated to our new database. You can now enjoy improved performance and scalability."
            android:textSize="16sp"
            android:textColor="@color/md_theme_onSurfaceVariant"
            android:gravity="center"
            android:lineSpacingExtra="4dp" />

        <Button
            android:id="@+id/continueButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:textSize="16sp"
            android:paddingHorizontal="32dp"
            android:paddingVertical="12dp"
            android:background="@drawable/button_primary"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <!-- Error Body -->
    <LinearLayout
        android:id="@+id/migrationErrorBody"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="24dp"
            android:src="@drawable/ic_error"
            android:contentDescription="Migration Error" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Migration Failed"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/md_theme_error" />

        <TextView
            android:id="@+id/errorText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="An error occurred during migration. Please try again."
            android:textSize="16sp"
            android:textColor="@color/md_theme_onSurfaceVariant"
            android:gravity="center"
            android:lineSpacingExtra="4dp" />

        <Button
            android:id="@+id/retryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retry"
            android:textSize="16sp"
            android:paddingHorizontal="32dp"
            android:paddingVertical="12dp"
            android:background="@drawable/button_primary"
            android:textColor="@android:color/white" />

    </LinearLayout>

</LinearLayout>