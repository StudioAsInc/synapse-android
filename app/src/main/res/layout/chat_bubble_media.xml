<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/body"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="8dp"
		android:paddingRight="8dp"
		android:orientation="horizontal">
		<androidx.cardview.widget.CardView
			android:id="@+id/mProfileCard"
			android:layout_width="34dp"
			android:layout_height="34dp"
			android:layout_marginLeft="8dp"
			android:layout_marginTop="6dp"
			android:visibility="gone"
			app:cardElevation="0dp"
			app:cardCornerRadius="200dp">
			<ImageView
				android:id="@+id/mProfileImage"
				android:focusable="false"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:src="@drawable/avatar"
				android:scaleType="centerCrop" />
		</androidx.cardview.widget.CardView>
		<LinearLayout
			android:id="@+id/message_layout"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/messageBG"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="8dp"
				android:layout_marginTop="2dp"
				android:layout_marginRight="8dp"
				android:layout_marginBottom="2dp"
				android:paddingLeft="4dp"
				android:paddingTop="4dp"
				android:paddingRight="4dp"
				android:paddingBottom="8dp"
				android:background="#00000000"
				android:clickable="true"
				android:focusable="true"
				android:foreground="?attr/selectableItemBackgroundBorderless"
				android:orientation="vertical">
				<androidx.cardview.widget.CardView
					android:id="@+id/mediaContainerCard"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					app:cardElevation="0dp"
					app:cardCornerRadius="18dp">
					
					<!-- SIMPLIFIED LAYOUT - TESTING -->
					<!-- Original grid layout for compatibility -->
					<androidx.gridlayout.widget.GridLayout
						android:id="@+id/mediaGridLayout"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:columnCount="2"
						app:useDefaultMargins="true">
					</androidx.gridlayout.widget.GridLayout>
					
					<!-- New carousel layout for better UX (temporarily hidden) -->
					<LinearLayout
						android:id="@+id/mediaCarouselContainer"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical"
						android:visibility="gone">
						
						<!-- Horizontal RecyclerView for carousel -->
						<androidx.recyclerview.widget.RecyclerView
							android:id="@+id/mediaCarouselRecyclerView"
							android:layout_width="match_parent"
							android:layout_height="200dp"
							android:layout_marginBottom="8dp"
							android:clipToPadding="false"
							android:paddingStart="4dp"
							android:paddingEnd="4dp"
							android:nestedScrollingEnabled="false" />
						
						<!-- View all button for multiple images -->
						<com.google.android.material.button.MaterialButton
							android:id="@+id/viewAllImagesButton"
							style="@style/Widget.MaterialComponents.Button.TextButton"
							android:layout_width="wrap_content"
							android:layout_height="36dp"
							android:layout_gravity="center_horizontal"
							android:layout_marginTop="4dp"
							android:layout_marginBottom="4dp"
							android:text="View all images"
							android:textSize="14sp"
							android:textColor="@color/colorPrimary"
							android:visibility="gone"
							app:iconGravity="textStart"
							app:icon="@drawable/ic_image_multiple"
							app:iconSize="18dp"
							app:iconTint="@color/colorPrimary" />
							
					</LinearLayout>
					
				</androidx.cardview.widget.CardView>
				<com.google.android.material.card.MaterialCardView
					android:id="@+id/mRepliedMessageLayout"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginBottom="8dp"
					android:visibility="gone"
					app:cardElevation="0dp"
					app:cardCornerRadius="6dp">
					<LinearLayout
						android:id="@+id/linear2"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:orientation="horizontal">
						<LinearLayout
							android:id="@+id/mRepliedMessageLayoutLeftBar"
							android:layout_width="4dp"
							android:layout_height="match_parent"
							android:layout_marginRight="8dp"
							android:background="#2979FF"
							android:orientation="vertical" />
						<LinearLayout
							android:id="@+id/mRepliedMessageLayoutRightBody"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:orientation="vertical">
							<TextView
								android:id="@+id/mRepliedMessageLayoutUsername"
								android:focusable="false"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="@string/ph_username"
								android:textSize="12sp"
								android:textColor="#445E91"
								android:singleLine="true" />
							<!-- CRITICAL FIX: Add ImageView for reply image previews -->
							<ImageView
								android:id="@+id/mRepliedMessageLayoutImage"
								android:layout_width="60dp"
								android:layout_height="60dp"
								android:layout_marginTop="4dp"
								android:layout_marginBottom="4dp"
								android:scaleType="centerCrop"
								android:background="@drawable/ph_imgbluredsqure"
								android:visibility="gone" />
							<TextView
								android:id="@+id/mRepliedMessageLayoutMessage"
								android:focusable="false"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:paddingRight="4dp"
								android:text="@string/ph_replied_message"
								android:textSize="16sp"
								android:autoLink="all"
								android:maxLines="3"
								android:ellipsize="end"
								android:textColorLink="#FF0000" />
						</LinearLayout>
					</LinearLayout>
				</com.google.android.material.card.MaterialCardView>
				<com.synapse.social.studioasinc.animations.ShimmerFrameLayout
					android:id="@+id/shimmer_container"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					app:shimmer_color="#9A9A9A">
					<TextView
						android:id="@+id/message_text"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:paddingLeft="8dp"
						android:paddingTop="6dp"
						android:paddingRight="8dp"
						android:text="Message caption"
						android:textSize="16sp"
						android:autoLink="all"
						android:textColorLink="#FFFF00" />
				</com.synapse.social.studioasinc.animations.ShimmerFrameLayout>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/my_message_info"
				android:layout_width="wrap_content"
				android:layout_height="16dp"
				android:layout_marginRight="8dp"
				android:gravity="right|center_vertical"
				android:orientation="horizontal"
				android:layout_gravity="right">
				<TextView
					android:id="@+id/date"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginRight="4dp"
					android:text="00:00"
					android:textSize="12sp"
					android:textColor="#000000" />
				<ImageView
					android:id="@+id/message_state"
					android:focusable="false"
					android:layout_width="14dp"
					android:layout_height="14dp"
					android:src="@drawable/ic_check_black"
					android:scaleType="centerInside" />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
