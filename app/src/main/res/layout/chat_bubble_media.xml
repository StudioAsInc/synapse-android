<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/body"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="8dp"
		android:paddingRight="8dp"
		android:orientation="horizontal">
		<androidx.cardview.widget.CardView
			android:id="@+id/mProfileCard"
			android:layout_width="34dp"
			android:layout_height="34dp"
			android:layout_marginLeft="8dp"
			android:layout_marginTop="6dp"
			android:visibility="gone"
			app:cardElevation="0dp"
			app:cardCornerRadius="200dp">
			<ImageView
				android:id="@+id/mProfileImage"
				android:focusable="false"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:src="@drawable/avatar"
				android:scaleType="centerCrop" />
		</androidx.cardview.widget.CardView>
		<LinearLayout
			android:id="@+id/message_layout"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/messageBG"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="8dp"
				android:layout_marginTop="2dp"
				android:layout_marginRight="8dp"
				android:layout_marginBottom="2dp"
				android:paddingLeft="4dp"
				android:paddingTop="4dp"
				android:paddingRight="4dp"
				android:paddingBottom="8dp"
				android:background="#CFD8DC"
				android:orientation="vertical">
				<androidx.cardview.widget.CardView
					android:id="@+id/mediaContainerCard"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					app:cardElevation="0dp"
					app:cardCornerRadius="18dp">
					<androidx.gridlayout.widget.GridLayout
						android:id="@+id/mediaGridLayout"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						app:columnCount="2"
						app:useDefaultMargins="false">
					</androidx.gridlayout.widget.GridLayout>
				</androidx.cardview.widget.CardView>
				<TextView
					android:id="@+id/message_text"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingLeft="8dp"
					android:paddingTop="6dp"
					android:paddingRight="8dp"
					android:text="Message caption"
					android:textSize="16sp"
					android:autoLink="all"
					android:textColorLink="#FFFF00" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/my_message_info"
				android:layout_width="wrap_content"
				android:layout_height="16dp"
				android:layout_marginRight="8dp"
				android:gravity="right|center_vertical"
				android:orientation="horizontal"
				android:layout_gravity="right">
				<TextView
					android:id="@+id/date"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginRight="4dp"
					android:text="00:00"
					android:textSize="12sp"
					android:textColor="#000000" />
				<ImageView
					android:id="@+id/message_state"
					android:focusable="false"
					android:layout_width="14dp"
					android:layout_height="14dp"
					android:src="@drawable/ic_check_black"
					android:scaleType="centerInside" />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
