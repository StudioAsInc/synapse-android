<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:id="@+id/_main">
	<LinearLayout
		android:id="@+id/body"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#FFFFFF"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/middleLayout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_weight="1">
			<androidx.coordinatorlayout.widget.CoordinatorLayout
				android:id="@+id/m_coordinator_layout"
				android:layout_width="match_parent"
				android:layout_height="match_parent">
				<com.google.android.material.appbar.AppBarLayout
					android:id="@+id/m_coordinator_layout_appbar"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:background="@null"
					app:elevation="0dp">
					<com.google.android.material.appbar.CollapsingToolbarLayout
						android:id="@+id/m_coordinator_layout_collapsing_toolbar"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical"
						app:layout_scrollFlags="scroll|enterAlwaysCollapsed">
						<LinearLayout
							android:id="@+id/m_coordinator_layout_collapsing_toolbar_body"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:orientation="vertical">
							<LinearLayout
								android:id="@+id/storiesAndMiniPostsSpc"
								android:layout_width="match_parent"
								android:layout_height="1dp"
								android:padding="8dp"
								android:background="#F5F5F5"
								android:orientation="horizontal" />
							<LinearLayout
								android:id="@+id/stories"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:orientation="vertical">
								<LinearLayout
									android:id="@+id/topBar"
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:paddingLeft="16dp"
									android:paddingRight="16dp"
									android:background="#FFFFFF"
									android:gravity="center_vertical"
									android:orientation="horizontal">
									<TextView
										android:id="@+id/app_name_bar"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:text="Synapse"
										android:textSize="40sp"
										android:textStyle="bold"
										android:textColor="@color/colorPrimary"
										android:fontFamily="@font/product_sans_bold" />
									<LinearLayout
										android:id="@+id/topBarSpace"
										android:layout_width="wrap_content"
										android:layout_height="match_parent"
										android:padding="8dp"
										android:orientation="vertical"
										android:layout_weight="1" />
									<ImageView
										android:id="@+id/imageview1"
										android:layout_width="25dp"
										android:layout_height="25dp"
										android:src="@drawable/menu_24px"
										android:scaleType="fitCenter" />
								</LinearLayout>
								<LinearLayout
									android:id="@+id/bottomBar"
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:orientation="horizontal">
									<LinearLayout
										android:id="@+id/bottom_home"
										android:layout_width="match_parent"
										android:layout_height="match_parent"
										android:padding="10dp"
										android:gravity="center_horizontal|center_vertical"
										android:orientation="vertical"
										android:layout_weight="1">
										<ImageView
											android:id="@+id/bottom_home_ic"
											android:layout_width="30dp"
											android:layout_height="30dp"
											android:src="@drawable/home_24px"
											android:scaleType="centerCrop" />
									</LinearLayout>
									<LinearLayout
										android:id="@+id/bottom_search"
										android:layout_width="match_parent"
										android:layout_height="match_parent"
										android:padding="10dp"
										android:gravity="center_horizontal|center_vertical"
										android:orientation="vertical"
										android:layout_weight="1">
										<ImageView
											android:id="@+id/bottom_search_ic"
											android:layout_width="30dp"
											android:layout_height="30dp"
											android:src="@drawable/ic_search_48px"
											android:scaleType="centerCrop" />
									</LinearLayout>
									<LinearLayout
										android:id="@+id/bottom_videos"
										android:layout_width="match_parent"
										android:layout_height="match_parent"
										android:gravity="center_horizontal|center_vertical"
										android:orientation="vertical"
										android:layout_weight="1">
										<ImageView
											android:id="@+id/bottom_videos_ic"
											android:layout_width="30dp"
											android:layout_height="30dp"
											android:src="@drawable/ic_video_library_48px"
											android:scaleType="centerCrop" />
									</LinearLayout>
									<LinearLayout
										android:id="@+id/bottom_chats"
										android:layout_width="match_parent"
										android:layout_height="match_parent"
										android:padding="10dp"
										android:gravity="center_horizontal|center_vertical"
										android:orientation="vertical"
										android:layout_weight="1">
										<ImageView
											android:id="@+id/bottom_chats_ic"
											android:layout_width="30dp"
											android:layout_height="30dp"
											android:src="@drawable/ic_comment_48px"
											android:scaleType="centerCrop" />
									</LinearLayout>
									<LinearLayout
										android:id="@+id/bottom_profile"
										android:layout_width="match_parent"
										android:layout_height="wrap_content"
										android:padding="10dp"
										android:gravity="center_horizontal|center_vertical"
										android:orientation="vertical"
										android:layout_weight="1">
										<ImageView
											android:id="@+id/bottom_profile_ic"
											android:layout_width="30dp"
											android:layout_height="30dp"
											android:src="@drawable/ic_account_circle_48px"
											android:scaleType="centerCrop" />
									</LinearLayout>
								</LinearLayout>
								<androidx.recyclerview.widget.RecyclerView
									android:id="@+id/storiesView"
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									tools:listitem="@layout/synapse_story_cv" />
							</LinearLayout>
							<LinearLayout
								android:id="@+id/miniPostLayout"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:orientation="vertical"
								android:animateLayoutChanges="true">
								<LinearLayout
									android:id="@+id/miniPostLayoutTop"
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:padding="14dp"
									android:orientation="horizontal">
									<androidx.cardview.widget.CardView
										android:id="@+id/miniPostLayoutProfileCard"
										android:layout_width="38dp"
										android:layout_height="38dp"
										android:layout_marginRight="8dp"
										app:cardElevation="0dp">
										<ImageView
											android:id="@+id/miniPostLayoutProfileImage"
											android:layout_width="wrap_content"
											android:layout_height="wrap_content"
											android:src="@drawable/avatar"
											android:scaleType="centerCrop" />
									</androidx.cardview.widget.CardView>
									<EditText
										android:id="@+id/miniPostLayoutTextPostInput"
										android:layout_width="match_parent"
										android:layout_height="wrap_content"
										android:padding="8dp"
										android:background="@android:color/transparent"
										android:textSize="18sp"
										android:textColor="#000000"
										android:hint="What's on your mind\?"
										android:textColorHint="#757575"
										android:layout_gravity="center_vertical"
										android:maxLength="1500" />
								</LinearLayout>
								<LinearLayout
									android:id="@+id/miniPostLayoutMiddleSpc"
									android:layout_width="match_parent"
									android:layout_height="1dp"
									android:padding="8dp"
									android:background="#F5F5F5"
									android:orientation="horizontal" />
								<LinearLayout
									android:id="@+id/miniPostLayoutBottom"
									android:layout_width="match_parent"
									android:layout_height="wrap_content"
									android:layout_marginTop="10dp"
									android:layout_marginBottom="10dp"
									android:paddingLeft="14dp"
									android:paddingTop="2dp"
									android:paddingRight="14dp"
									android:paddingBottom="2dp"
									android:gravity="center_vertical"
									android:orientation="horizontal">
									<ImageView
										android:id="@+id/miniPostLayoutImagePost"
										android:layout_width="32dp"
										android:layout_height="32dp"
										android:layout_marginRight="8dp"
										android:padding="6dp"
										android:src="@drawable/ic_photo_library_48px"
										android:scaleType="fitCenter" />
									<ImageView
										android:id="@+id/miniPostLayoutVideoPost"
										android:layout_width="32dp"
										android:layout_height="32dp"
										android:layout_marginRight="8dp"
										android:padding="6dp"
										android:src="@drawable/ic_video_library_48px"
										android:scaleType="fitCenter" />
									<ImageView
										android:id="@+id/miniPostLayoutTextPost"
										android:layout_width="32dp"
										android:layout_height="32dp"
										android:layout_marginRight="8dp"
										android:padding="6dp"
										android:src="@drawable/ic_newsmode_48px"
										android:scaleType="fitCenter" />
									<ImageView
										android:id="@+id/miniPostLayoutMoreButton"
										android:layout_width="32dp"
										android:layout_height="32dp"
										android:padding="6dp"
										android:src="@drawable/more_ic"
										android:scaleType="centerInside" />
									<LinearLayout
										android:id="@+id/miniPostLayoutBottomSpace"
										android:layout_width="wrap_content"
										android:layout_height="match_parent"
										android:layout_marginLeft="8dp"
										android:layout_marginRight="8dp"
										android:padding="8dp"
										android:orientation="vertical"
										android:layout_weight="1" />
									<TextView
										android:id="@+id/miniPostLayoutTextPostPublish"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:paddingLeft="18dp"
										android:paddingTop="8dp"
										android:paddingRight="18dp"
										android:paddingBottom="8dp"
										android:background="#757575"
										android:text="Share"
										android:textSize="16sp"
										android:textColor="#FFFFFF"
										android:fontFamily="@font/product_sans" />
								</LinearLayout>
								<LinearLayout
									android:id="@+id/miniPostLayoutBottomSpc"
									android:layout_width="match_parent"
									android:layout_height="1dp"
									android:padding="8dp"
									android:background="#F5F5F5"
									android:orientation="horizontal" />
							</LinearLayout>
							<HorizontalScrollView
								android:id="@+id/miniPostLayoutFiltersScroll"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_marginTop="10dp"
								android:layout_marginBottom="10dp"
								android:scrollbars="none">
								<LinearLayout
									android:id="@+id/miniPostLayoutFiltersScrollBody"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:gravity="center_vertical"
									android:orientation="horizontal">
									<TextView
										android:id="@+id/miniPostLayoutFiltersScrollBodyFilterLOCAL"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:layout_marginLeft="14dp"
										android:paddingLeft="14dp"
										android:paddingTop="6dp"
										android:paddingRight="14dp"
										android:paddingBottom="6dp"
										android:background="@android:color/transparent"
										android:text="AI based"
										android:textSize="16sp"
										android:textColor="#616161" />
									<TextView
										android:id="@+id/miniPostLayoutFiltersScrollBodyFilterPUBLIC"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:layout_marginLeft="14dp"
										android:paddingLeft="14dp"
										android:paddingTop="6dp"
										android:paddingRight="14dp"
										android:paddingBottom="6dp"
										android:background="#445E91"
										android:text="Global"
										android:textSize="16sp"
										android:textColor="#FAFAFA"
										android:fontFamily="@font/product_sans" />
									<TextView
										android:id="@+id/miniPostLayoutFiltersScrollBodyFilterFOLLOWED"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:layout_marginLeft="14dp"
										android:paddingLeft="14dp"
										android:paddingTop="6dp"
										android:paddingRight="14dp"
										android:paddingBottom="6dp"
										android:text="Following"
										android:textSize="16sp"
										android:textColor="#616161" />
									<TextView
										android:id="@+id/miniPostLayoutFiltersScrollBodyFilterFAVORITE"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:layout_marginLeft="14dp"
										android:layout_marginRight="14dp"
										android:paddingLeft="14dp"
										android:paddingTop="6dp"
										android:paddingRight="14dp"
										android:paddingBottom="6dp"
										android:text="Saved posts"
										android:textSize="16sp"
										android:textColor="#616161" />
								</LinearLayout>
							</HorizontalScrollView>
						</LinearLayout>
						<LinearLayout
							android:id="@+id/topSpc14"
							android:layout_width="match_parent"
							android:layout_height="1dp"
							android:padding="4dp"
							android:background="#F5F5F5"
							android:orientation="horizontal" />
					</com.google.android.material.appbar.CollapsingToolbarLayout>
					<LinearLayout
						android:id="@+id/topCollapsingSpc"
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:padding="8dp"
						android:background="#F5F5F5"
						android:orientation="horizontal" />
				</com.google.android.material.appbar.AppBarLayout>
				<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
					android:id="@+id/swipeLayout"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
					<LinearLayout
						android:id="@+id/swipeLayoutBody"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:orientation="vertical">
						<LinearLayout
							android:id="@+id/PublicPostsBody"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:orientation="vertical">
							<androidx.recyclerview.widget.RecyclerView
								android:id="@+id/PublicPostsList"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								tools:listitem="@layout/synapse_post_cv" />
							<TextView
								android:id="@+id/PublicPostsListNotFound"
								android:layout_width="match_parent"
								android:layout_height="350dp"
								android:padding="8dp"
								android:gravity="center_horizontal|center_vertical"
								android:text="There are no public posts available \nat the moment."
								android:textSize="16sp"
								android:textColor="#757575" />
						</LinearLayout>
					</LinearLayout>
				</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
			</androidx.coordinatorlayout.widget.CoordinatorLayout>
			<LinearLayout
				android:id="@+id/noInternetBody"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:padding="8dp"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="vertical">
				<ImageView
					android:id="@+id/noInternetBodyIc"
					android:layout_width="100dp"
					android:layout_height="100dp"
					android:layout_marginBottom="16dp"
					android:src="@drawable/user_not_found_ic"
					android:scaleType="centerInside" />
				<TextView
					android:id="@+id/noInternetBodyTitle"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginBottom="16dp"
					android:textSize="20sp"
					android:textStyle="bold"
					android:textColor="#000000"
					tools:replace="android:text"
					android:text="@string/oh_there_us_a_problem" />
				<TextView
					android:id="@+id/noInternetBodySubtitle"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginBottom="16dp"
					android:text="Reasons may be:\n\n• You have no or weak internet connection.\n• The application may be under maintenance.\n• There may be technical problems on our side."
					android:textSize="18sp"
					android:textColor="#757575" />
				<TextView
					android:id="@+id/noInternetBodyRetry"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingLeft="14dp"
					android:paddingTop="8dp"
					android:paddingRight="14dp"
					android:paddingBottom="8dp"
					android:background="#2196F3"
					android:textSize="18sp"
					android:textColor="#FFFFFF"
					tools:replace="android:text"
					android:text="@string/retry" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/loadingBody"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:padding="8dp"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="horizontal">
				<ProgressBar
					android:id="@+id/loading_bar"
					android:layout_width="48dp"
					android:layout_height="48dp"
					android:indeterminate="false"
					style="?android:progressBarStyle" />
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/bottomSpc"
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:padding="8dp"
			android:background="#F5F5F5"
			android:orientation="horizontal" />
	</LinearLayout>
</LinearLayout>
