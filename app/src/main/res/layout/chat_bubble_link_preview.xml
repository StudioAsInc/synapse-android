<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/body"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="8dp"
		android:paddingRight="8dp"
		android:orientation="horizontal">
		<androidx.cardview.widget.CardView
			android:id="@+id/mProfileCard"
			android:layout_width="34dp"
			android:layout_height="34dp"
			android:layout_marginLeft="8dp"
			android:layout_marginTop="6dp"
			android:visibility="gone"
			app:cardElevation="0dp"
			app:cardCornerRadius="200dp">
			<ImageView
				android:id="@+id/mProfileImage"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:src="@drawable/avatar"
				android:scaleType="centerCrop"
				android:focusable="false" />
		</androidx.cardview.widget.CardView>
		<LinearLayout
			android:id="@+id/message_layout"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/messageBG"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="8dp"
				android:layout_marginTop="2dp"
				android:layout_marginRight="8dp"
				android:layout_marginBottom="2dp"
				android:paddingLeft="12dp"
				android:paddingTop="10dp"
				android:paddingRight="12dp"
				android:paddingBottom="10dp"
				android:background="#CFD8DC"
				android:orientation="vertical"
				android:animateLayoutChanges="true">
				<com.google.android.material.card.MaterialCardView
					android:id="@+id/linkPreviewContainer"
					android:layout_width="250dp"
					android:layout_height="wrap_content"
					app:contentPadding="1dp"
					app:cardCornerRadius="15dp"
					app:cardElevation="0dp"
					app:strokeColor="#E0E0E0"
					app:strokeWidth="1dp">
					<LinearLayout
						android:id="@+id/linear2"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical">
						<ImageView
							android:id="@+id/linkPreviewImage"
							android:layout_width="match_parent"
							android:layout_height="120dp"
							android:src="@drawable/avatar"
							android:scaleType="centerCrop"
							android:focusable="false"
							android:visibility="gone" />
						<LinearLayout
							android:id="@+id/linear11"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:padding="8dp"
							android:orientation="vertical">
							<TextView
								android:id="@+id/linkPreviewTitle"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="Link Title"
								android:textSize="14sp"
								android:textStyle="bold"
								android:textColor="#000000"
								android:focusable="false"
								android:maxLines="2"
								android:ellipsize="end" />
							<TextView
								android:id="@+id/linkPreviewDescription"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginTop="4dp"
								android:text="This is a description of the webpage content..."
								android:textSize="12sp"
								android:textColor="#000000"
								android:focusable="false"
								android:maxLines="3"
								android:ellipsize="end" />
							<TextView
								android:id="@+id/linkPreviewDomain"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginTop="4dp"
								android:text="example.com"
								android:textSize="12sp"
								android:textColor="#000000"
								android:focusable="false"
								android:drawablePadding="4dp"
								app:drawableStartCompat="@drawable/ic_link_black"
								app:drawableTint="#61000000" />
						</LinearLayout>
					</LinearLayout>
				</com.google.android.material.card.MaterialCardView>

				<TextView
					android:id="@+id/message_text"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingTop="6dp"
					android:text="The rest of the message containing the link."
					android:textSize="16sp"
					android:focusable="false"
					android:autoLink="all"
					android:textColorLink="#FF0000" />

			</LinearLayout>
			<LinearLayout
				android:id="@+id/my_message_info"
				android:layout_width="wrap_content"
				android:layout_height="16dp"
				android:layout_marginRight="8dp"
				android:gravity="right|center_vertical"
				android:orientation="horizontal"
				android:layout_gravity="right">
				<TextView
					android:id="@+id/date"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginRight="4dp"
					android:text="00:00"
					android:textSize="12sp"
					android:textColor="#000000"
					android:focusable="false" />
				<ImageView
					android:id="@+id/message_state"
					android:layout_width="14dp"
					android:layout_height="14dp"
					android:src="@drawable/ic_check_black"
					android:scaleType="centerInside"
					android:focusable="false" />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
