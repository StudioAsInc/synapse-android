<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.MaterialComponents.Light"
        app:titleTextColor="@android:color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Status Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notification Status"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/tv_notification_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Current Status: Checking..."
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tv_quiet_hours_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”Š Notifications Active"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Test Notifications Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Test Notifications"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp" />

                    <!-- Chat Notification Test -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_test_chat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Test Chat Notification"
                        android:textAllCaps="false"
                        android:layout_marginBottom="8dp"
                        app:icon="@drawable/ic_chat"
                        app:iconGravity="textStart"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                    <!-- Group Notification Test -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_test_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Test Group Notification"
                        android:textAllCaps="false"
                        android:layout_marginBottom="8dp"
                        app:icon="@drawable/ic_group"
                        app:iconGravity="textStart"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                    <!-- Friend Request Test -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_test_friend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Test Friend Request"
                        android:textAllCaps="false"
                        android:layout_marginBottom="8dp"
                        app:icon="@drawable/ic_friend_request"
                        app:iconGravity="textStart"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                    <!-- Mention Test -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_test_mention"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Test Mention Notification"
                        android:textAllCaps="false"
                        android:layout_marginBottom="8dp"
                        app:icon="@drawable/ic_mention"
                        app:iconGravity="textStart"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- OneSignal Test Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OneSignal Integration"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="16dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_test_onesignal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Test OneSignal API"
                        android:textAllCaps="false"
                        app:icon="@drawable/ic_onesignal"
                        app:iconGravity="textStart"
                        style="@style/Widget.MaterialComponents.Button" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>