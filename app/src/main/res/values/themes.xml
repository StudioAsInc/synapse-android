<resources>
    <!--Main App Theme combining all attributes from both files-->
    <style name="AppTheme" parent="Theme.Material3Expressive.DynamicColors.DayNight.NoActionBar">
        <!-- Other theme attributes -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:windowDisablePreview">true</item>
    </style>
    <!--All additional styles from themes.xml-->
    <style name="AppTheme.FullScreen" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.Material3.Dark.ActionBar">
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.Material3.Light">
    </style>
    <style name="PostCommentsBottomSheetDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="HomeCustomTabLayout" parent="TextAppearance.Material3.TitleMedium">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="CustomSliderTooltip" parent="Widget.Material3.Tooltip">
        <item name="shapeAppearanceOverlay">@style/TooltipShape</item>
    </style>
    <style name="TooltipShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">30%</item>
        <item name="cornerSizeTopRight">30%</item>
        <item name="cornerSizeBottomLeft">10%</item>
        <item name="cornerSizeBottomRight">10%</item>
    </style>
    <style name="ShapeAppearance.Material3.Expressive.Small" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    <style name="ShapeAppearance.Material3.Expressive.Medium" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
    <style name="ShapeAppearance.Material3.Expressive.Large" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    <style name="AppTheme.DebugActivity" parent="AppTheme">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>
    <style name="CollapsingTextExpanded.Material3" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">28sp</item>
        <item name="fontFamily">@font/product_sans</item>
    </style>
    <style name="CollapsingTextCollapsed.Material3" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">23sp</item>
        <item name="fontFamily">@font/product_sans</item>
    </style>
    <style name="ToolbarTitleFont" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/product_sans</item>
    </style>
    <style name="MaterialAlertDialog.Rounded" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/DialogTitleTextAppearance</item>
        <item name="materialAlertDialogBodyTextStyle">@style/DialogBodyTextAppearance</item>
    </style>
    <style name="DialogTitleTextAppearance" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
    <style name="DialogBodyTextAppearance" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textSize">14sp</item>
    </style>
</resources>