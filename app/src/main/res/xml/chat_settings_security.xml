<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Security and services">

        <SwitchPreferenceCompat
            app:key="app_lock"
            app:title="App lock"
            app:defaultValue="false"/>

        <SwitchPreferenceCompat
            app:key="keep_alive_service"
            app:title="Keep-alive service"
            app:summary="Keep services running in background."
            app:defaultValue="true"/>

        <SwitchPreferenceCompat
            app:key="background_connection"
            app:title="Background connection"
            app:summary="Keep processing with low power"
            app:defaultValue="false"/>

    </PreferenceCategory>

</PreferenceScreen>
