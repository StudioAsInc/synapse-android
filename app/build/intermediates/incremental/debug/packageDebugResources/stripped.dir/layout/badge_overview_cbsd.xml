<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<androidx.cardview.widget.CardView
		android:id="@+id/cardview1"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		app:cardElevation="0dp"
		app:cardCornerRadius="20dp">
		<LinearLayout
			android:id="@+id/body"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="25dp"
			android:paddingTop="15dp"
			android:paddingRight="25dp"
			android:paddingBottom="15dp"
			android:gravity="center_horizontal"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/linear2"
				android:layout_width="50dp"
				android:layout_height="5dp"
				android:padding="8dp"
				android:orientation="horizontal"
				android:background="@drawable/rounded_background" />
			<TextView
				android:id="@+id/textview1"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="15dp"
				android:layout_marginBottom="25dp"
				android:text="About badges"
				android:textSize="25sp"
				android:textStyle="bold"
				android:textColor="#000000" />
			<ScrollView
				android:id="@+id/vscroll1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
				<LinearLayout
					android:id="@+id/linear3"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical">
					<LinearLayout
						android:id="@+id/linear4"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center_horizontal|center_vertical"
						android:orientation="horizontal">
						<ImageView
							android:id="@+id/imageview1"
							android:focusable="false"
							android:layout_width="30dp"
							android:layout_height="30dp"
							android:src="@drawable/icon_code_round"
							android:scaleType="fitCenter" />
						<LinearLayout
							android:id="@+id/linear5"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginLeft="8dp"
							android:padding="8dp"
							android:orientation="vertical">
							<TextView
								android:id="@+id/textview3"
								android:focusable="false"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="Developer"
								android:textSize="18sp"
								android:textColor="#000000" />
							<TextView
								android:id="@+id/textview2"
								android:focusable="false"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="Highest rank. Given to users who are involved in Synapse development."
								android:textSize="12sp"
								android:textColor="#757575" />
						</LinearLayout>
					</LinearLayout>
					<LinearLayout
						android:id="@+id/linear6"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="10dp"
						android:layout_marginBottom="10dp"
						android:gravity="center_horizontal|center_vertical"
						android:orientation="horizontal">
						<ImageView
							android:id="@+id/imageview2"
							android:focusable="false"
							android:layout_width="30dp"
							android:layout_height="30dp"
							android:src="@drawable/admin_badge"
							android:scaleType="fitCenter" />
						<LinearLayout
							android:id="@+id/linear7"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginLeft="8dp"
							android:padding="8dp"
							android:orientation="vertical">
							<TextView
								android:id="@+id/textview4"
								android:focusable="false"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="Admin"
								android:textSize="18sp"
								android:textColor="#000000" />
							<TextView
								android:id="@+id/textview5"
								android:focusable="false"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="Secound highest rank. Given to users who are in the management of Synapse"
								android:textSize="12sp"
								android:textColor="#757575" />
						</LinearLayout>
					</LinearLayout>
					<LinearLayout
						android:id="@+id/linear8"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center_horizontal|center_vertical"
						android:orientation="horizontal">
						<ImageView
							android:id="@+id/imageview3"
							android:focusable="false"
							android:layout_width="30dp"
							android:layout_height="30dp"
							android:src="@drawable/moderator_badge"
							android:scaleType="fitCenter" />
						<LinearLayout
							android:id="@+id/linear9"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginLeft="8dp"
							android:padding="8dp"
							android:orientation="vertical">
							<TextView
								android:id="@+id/textview6"
								android:focusable="false"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="Moderator"
								android:textSize="18sp"
								android:textColor="#000000" />
							<TextView
								android:id="@+id/textview7"
								android:focusable="false"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="Assistant of Admin wh help Admin to manage Synapse."
								android:textSize="12sp"
								android:textColor="#757575" />
						</LinearLayout>
					</LinearLayout>
					<LinearLayout
						android:id="@+id/linear10"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="10dp"
						android:layout_marginBottom="10dp"
						android:gravity="center_horizontal|center_vertical"
						android:orientation="horizontal">
						<ImageView
							android:id="@+id/imageview4"
							android:focusable="false"
							android:layout_width="30dp"
							android:layout_height="30dp"
							android:src="@drawable/support_badge"
							android:scaleType="fitCenter" />
						<LinearLayout
							android:id="@+id/linear11"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginLeft="8dp"
							android:padding="8dp"
							android:orientation="vertical">
							<TextView
								android:id="@+id/textview8"
								android:focusable="false"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="Beta tester"
								android:textSize="18sp"
								android:textColor="#000000" />
							<TextView
								android:id="@+id/textview9"
								android:focusable="false"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="Given to users who volunteer  to beta version of Synapse"
								android:textSize="12sp"
								android:textColor="#757575" />
						</LinearLayout>
					</LinearLayout>
					<LinearLayout
						android:id="@+id/linear12"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center_horizontal|center_vertical"
						android:orientation="horizontal">
						<ImageView
							android:id="@+id/imageview5"
							android:focusable="false"
							android:layout_width="30dp"
							android:layout_height="30dp"
							android:src="@drawable/verified_badge"
							android:scaleType="fitCenter" />
						<LinearLayout
							android:id="@+id/linear13"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginLeft="8dp"
							android:padding="8dp"
							android:orientation="vertical">
							<TextView
								android:id="@+id/textview10"
								android:focusable="false"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="Verified"
								android:textSize="18sp"
								android:textColor="#000000" />
							<TextView
								android:id="@+id/textview11"
								android:focusable="false"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="Given to the most engaging users who completed profile informations"
								android:textSize="12sp"
								android:textColor="#757575" />
						</LinearLayout>
					</LinearLayout>
					<LinearLayout
						android:id="@+id/linear14"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="10dp"
						android:layout_marginBottom="10dp"
						android:gravity="center_horizontal|center_vertical"
						android:orientation="horizontal">
						<ImageView
							android:id="@+id/imageview6"
							android:focusable="false"
							android:layout_width="30dp"
							android:layout_height="30dp"
							android:src="@drawable/profile_mdg_ic_1"
							android:scaleType="fitCenter" />
						<LinearLayout
							android:id="@+id/linear15"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginLeft="8dp"
							android:padding="8dp"
							android:orientation="vertical">
							<TextView
								android:id="@+id/textview12"
								android:focusable="false"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="VIP"
								android:textSize="18sp"
								android:textColor="#000000" />
							<TextView
								android:id="@+id/textview13"
								android:focusable="false"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="Given to them, who support by subscribing VIP plans"
								android:textSize="12sp"
								android:textColor="#757575" />
						</LinearLayout>
					</LinearLayout>
					<LinearLayout
						android:id="@+id/linear16"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center_horizontal|center_vertical"
						android:orientation="horizontal">
						<ImageView
							android:id="@+id/imageview7"
							android:focusable="false"
							android:layout_width="30dp"
							android:layout_height="30dp"
							android:src="@drawable/premium_badge"
							android:scaleType="fitCenter" />
						<LinearLayout
							android:id="@+id/linear17"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginLeft="8dp"
							android:padding="8dp"
							android:orientation="vertical">
							<TextView
								android:id="@+id/textview14"
								android:focusable="false"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="Premium"
								android:textSize="18sp"
								android:textColor="#000000" />
							<TextView
								android:id="@+id/textview15"
								android:focusable="false"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="Given to those who support by Donating &amp; other ways"
								android:textSize="12sp"
								android:textColor="#757575" />
						</LinearLayout>
					</LinearLayout>
				</LinearLayout>
			</ScrollView>
		</LinearLayout>
	</androidx.cardview.widget.CardView>
</LinearLayout>
