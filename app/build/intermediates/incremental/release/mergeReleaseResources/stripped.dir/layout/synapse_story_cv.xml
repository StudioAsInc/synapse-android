<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/storiesMyStory"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="8dp"
		android:background="#F5F5F5"
		android:gravity="center_horizontal|center_vertical"
		android:orientation="vertical">
		<androidx.cardview.widget.CardView
			android:id="@+id/storiesMyStoryProfileCard"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			app:cardElevation="0dp">
			<RelativeLayout
				android:id="@+id/storiesMyStoryRelative"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="vertical">
				<ImageView
					android:id="@+id/storiesMyStoryProfileImage"
					android:focusable="false"
					android:layout_width="64dp"
					android:layout_height="64dp"
					android:src="@drawable/avatar"
					android:scaleType="centerCrop" />
				<LinearLayout
					android:id="@+id/storiesMyStoryRelativeAddBody"
					android:layout_width="64dp"
					android:layout_height="64dp"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="vertical">
					<ImageView
						android:id="@+id/storiesMyStoryRelativeAdd"
						android:focusable="false"
						android:layout_width="32dp"
						android:layout_height="32dp"
						android:padding="2dp"
						android:src="@drawable/icon_close_round"
						android:scaleType="centerInside"
						android:rotation="45" />
				</LinearLayout>
			</RelativeLayout>
		</androidx.cardview.widget.CardView>
		<TextView
			android:id="@+id/storiesMyStoryTitle"
			android:focusable="false"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:text="Add story"
			android:textSize="14sp"
			android:textColor="#000000" />
	</LinearLayout>
	<LinearLayout
		android:id="@+id/storiesSecondStory"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="8dp"
		android:background="#F5F5F5"
		android:gravity="center_horizontal|center_vertical"
		android:orientation="vertical">
		<androidx.cardview.widget.CardView
			android:id="@+id/storiesSecondStoryProfileCard"
			android:layout_width="64dp"
			android:layout_height="64dp"
			app:cardElevation="0dp">
			<ImageView
				android:id="@+id/storiesSecondStoryProfileImage"
				android:focusable="false"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:src="@drawable/avatar"
				android:scaleType="centerCrop" />
		</androidx.cardview.widget.CardView>
		<TextView
			android:id="@+id/storiesSecondStoryTitle"
			android:focusable="false"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:text="username"
			android:textSize="14sp"
			android:textColor="#000000" />
	</LinearLayout>
</LinearLayout>
