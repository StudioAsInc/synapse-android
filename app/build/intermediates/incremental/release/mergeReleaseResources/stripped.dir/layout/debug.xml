<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:id="@+id/_main">
	<LinearLayout
		android:id="@+id/body"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="8dp"
		android:background="?colorOnSurfaceInverse"
		android:gravity="center_horizontal"
		android:orientation="vertical">
		<ImageView
			android:id="@+id/ic_bug"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:layout_marginTop="8dp"
			android:src="@drawable/ic_bug_report_48px"
			android:scaleType="fitCenter" />
		<TextView
			android:id="@+id/title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="App crashed"
			android:textSize="25sp"
			android:textStyle="bold"
			android:textColor="@color/md_theme_onBackground" />
		<TextView
			android:id="@+id/subtitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="14dp"
			android:paddingLeft="10dp"
			android:paddingTop="8dp"
			android:paddingRight="10dp"
			android:paddingBottom="8dp"
			android:gravity="center_horizontal"
			android:text="@string/debug_subtitle"
			android:textSize="16sp"
			android:textColor="@color/md_theme_onSurfaceVariant" />
		<androidx.cardview.widget.CardView
			android:id="@+id/cardview1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:cardBackgroundColor="@color/bars_colors"
			android:layout_weight="1"
			app:cardElevation="1dp"
			app:cardCornerRadius="20dp">
			<ScrollView
				android:id="@+id/scroll"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:background="@color/bars_colors"
				android:scrollbars="none">
				<TextView
					android:id="@+id/error_text"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="Errors will be shown here"
					android:textSize="14sp"
					android:textColor="?colorError"
					android:textIsSelectable="true" />
			</ScrollView>
		</androidx.cardview.widget.CardView>
		<Button
			android:id="@+id/clearData_btn"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="4dp"
			android:layout_marginTop="14dp"
			android:layout_marginRight="4dp"
			android:layout_marginBottom="14dp"
			android:padding="16dp"
			android:text="@string/report_error"
			android:textSize="16sp"
			android:textColor="@color/colorControlHighlight"
			style="@style/Widget.Material3Expressive.Button" />
	</LinearLayout>
</LinearLayout>
