<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:id="@+id/_main">
	<com.synapse.social.studioasinc.CenterCropLinearLayoutNoEffect
		android:id="@+id/body"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/default_pattern"
		android:gravity="center_horizontal|center_vertical"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/top_layout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:background="@android:color/transparent"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal"
			android:layout_weight="1" />
		<LinearLayout
			android:id="@+id/middle_layout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@android:color/transparent"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal"
			android:layout_weight="3">
			<ImageView
				android:id="@+id/app_logo"
				android:layout_width="85dp"
				android:layout_height="85dp"
				android:src="@drawable/appicon"
				android:scaleType="fitCenter"
				android:translationY="40.0dp" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/bottom_layout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@android:color/transparent"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="vertical"
			android:layout_weight="1">
			<ImageView
				android:id="@+id/trademark_img"
				android:layout_width="wrap_content"
				android:layout_height="100dp"
				android:layout_marginBottom="20dp"
				android:src="@drawable/bycompany_mtrl"
				android:scaleType="fitCenter"
				android:translationY="30.0dp" />
		</LinearLayout>
	</com.synapse.social.studioasinc.CenterCropLinearLayoutNoEffect>
</LinearLayout>
