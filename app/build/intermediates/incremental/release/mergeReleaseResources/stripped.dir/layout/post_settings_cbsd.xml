<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/body"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingTop="14dp"
		android:paddingBottom="14dp"
		android:background="#FFFFFF"
		android:gravity="center_horizontal"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/sldr"
			android:layout_width="50dp"
			android:layout_height="5dp"
			android:layout_marginBottom="14dp"
			android:padding="8dp"
			android:orientation="horizontal"
			android:background="@drawable/bsbar" />
		<LinearLayout
			android:id="@+id/copyPostText"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="22dp"
			android:paddingTop="10dp"
			android:paddingRight="22dp"
			android:paddingBottom="10dp"
			android:gravity="center_vertical"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/copyPostTextIc"
				android:focusable="false"
				android:layout_width="34dp"
				android:layout_height="34dp"
				android:layout_marginRight="16dp"
				android:padding="5dp"
				android:src="@drawable/ic_content_copy_48px"
				android:scaleType="fitCenter" />
			<TextView
				android:id="@+id/copyPostTextTitle"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="20sp"
				android:textColor="#000000"
				tools:replace="android:text"
				android:text="@string/m_copy" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/share"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="22dp"
			android:paddingTop="10dp"
			android:paddingRight="22dp"
			android:paddingBottom="10dp"
			android:gravity="center_vertical"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/shareIc"
				android:focusable="false"
				android:layout_width="34dp"
				android:layout_height="34dp"
				android:layout_marginRight="16dp"
				android:padding="5dp"
				android:src="@drawable/ic_reply"
				android:scaleType="fitCenter" />
			<TextView
				android:id="@+id/shareTitle"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="20sp"
				android:textColor="#000000"
				tools:replace="android:text"
				android:text="@string/share" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/editPost"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="22dp"
			android:paddingTop="10dp"
			android:paddingRight="22dp"
			android:paddingBottom="10dp"
			android:gravity="center_vertical"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/editPostIc"
				android:focusable="false"
				android:layout_width="34dp"
				android:layout_height="34dp"
				android:layout_marginRight="16dp"
				android:src="@drawable/ic_edit_note_48px"
				android:scaleType="centerCrop" />
			<TextView
				android:id="@+id/editPostTitle"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="20sp"
				android:textColor="#000000"
				tools:replace="android:text"
				android:text="@string/m_edit" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/report"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="22dp"
			android:paddingTop="10dp"
			android:paddingRight="22dp"
			android:paddingBottom="10dp"
			android:gravity="center_vertical"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/reportIc"
				android:focusable="false"
				android:layout_width="34dp"
				android:layout_height="34dp"
				android:layout_marginRight="16dp"
				android:padding="5dp"
				android:src="@drawable/ic_report_48px"
				android:scaleType="fitCenter" />
			<TextView
				android:id="@+id/reportTitle"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="20sp"
				android:textColor="#000000"
				tools:replace="android:text"
				android:text="@string/report" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/deletePost"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="22dp"
			android:paddingTop="10dp"
			android:paddingRight="22dp"
			android:paddingBottom="10dp"
			android:gravity="center_vertical"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/deletePostIc"
				android:focusable="false"
				android:layout_width="34dp"
				android:layout_height="34dp"
				android:layout_marginRight="16dp"
				android:padding="5dp"
				android:src="@drawable/ic_delete_48px"
				android:scaleType="fitCenter" />
			<TextView
				android:id="@+id/deletePostTitle"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="20sp"
				android:textColor="#000000"
				tools:replace="android:text"
				android:text="@string/m_delete" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
