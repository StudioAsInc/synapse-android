<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:id="@+id/_main">
	<LinearLayout
		android:id="@+id/body"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#FFFFFF"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/top"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="8dp"
			android:paddingRight="8dp"
			android:background="#FFFFFF"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/mBack"
				android:layout_width="48dp"
				android:layout_height="48dp"
				android:padding="12dp"
				android:src="@drawable/icon_arrow_back_ios_round"
				android:scaleType="fitCenter" />
			<TextView
				android:id="@+id/mTitle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="8dp"
				android:layout_marginRight="8dp"
				android:gravity="center_horizontal|center_vertical"
				android:textSize="20sp"
				android:textColor="#000000"
				android:layout_weight="1"
				tools:replace="android:text"
				android:text="@string/edit_profile" />
			<ImageView
				android:id="@+id/mSave"
				android:layout_width="48dp"
				android:layout_height="48dp"
				android:padding="12dp"
				android:src="@drawable/icon_save_round"
				android:scaleType="fitCenter" />
		</LinearLayout>
		<ScrollView
			android:id="@+id/mScroll"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<LinearLayout
				android:id="@+id/mScrollBody"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:padding="14dp"
				android:orientation="vertical">
				<androidx.cardview.widget.CardView
					android:id="@+id/profileRelativeCard"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="14dp"
					app:cardElevation="0dp">
					<RelativeLayout
						android:id="@+id/stage1Relative"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical">
						<ImageView
							android:id="@+id/profileCoverImage"
							android:layout_width="match_parent"
							android:layout_height="155dp"
							android:src="@drawable/user_null_cover_photo"
							android:scaleType="centerCrop" />
						<LinearLayout
							android:id="@+id/stage1RelativeUp"
							android:layout_width="match_parent"
							android:layout_height="155dp"
							android:gravity="center_horizontal|center_vertical"
							android:orientation="horizontal">
							<androidx.cardview.widget.CardView
								android:id="@+id/stage1RelativeUpProfileCard"
								android:layout_width="85dp"
								android:layout_height="85dp"
								app:cardElevation="2dp">
								<ImageView
									android:id="@+id/stage1RelativeUpProfileImage"
									android:layout_width="match_parent"
									android:layout_height="match_parent"
									android:src="@drawable/avatar"
									android:scaleType="centerCrop" />
							</androidx.cardview.widget.CardView>
						</LinearLayout>
					</RelativeLayout>
				</androidx.cardview.widget.CardView>
				<com.synapse.social.studioasinc.FadeEditText
					android:id="@+id/mUsernameInput"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="14dp"
					android:padding="16dp"
					android:background="@android:color/transparent"
					android:textSize="18sp"
					android:textColor="#000000"
					android:textColorHint="#757575"
					android:singleLine="true"
					tools:replace="android:hint"
					android:hint="@string/username"
					android:digits="0123456789abcdefghijklmnopqrstuvwxyz.-_" />
				<com.synapse.social.studioasinc.FadeEditText
					android:id="@+id/mNicknameInput"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="14dp"
					android:padding="16dp"
					android:background="@android:color/transparent"
					android:textSize="18sp"
					android:textColor="#000000"
					android:textColorHint="#757575"
					android:singleLine="true"
					tools:replace="android:hint"
					android:hint="@string/nickname" />
				<com.synapse.social.studioasinc.FadeEditText
					android:id="@+id/mBiographyInput"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="16dp"
					android:background="@android:color/transparent"
					android:textSize="18sp"
					android:textColor="#000000"
					android:textColorHint="#757575"
					tools:replace="android:hint"
					android:hint="@string/biography" />
				<LinearLayout
					android:id="@+id/gender"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="14dp"
					android:layout_marginBottom="14dp"
					android:padding="14dp"
					android:background="#FFFFFF"
					android:orientation="vertical">
					<TextView
						android:id="@+id/gender_title"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginBottom="4dp"
						android:textSize="20sp"
						android:textStyle="bold"
						android:textColor="#000000"
						tools:replace="android:text"
						android:text="@string/gender_title" />
					<TextView
						android:id="@+id/gender_subtitle"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginBottom="18dp"
						android:text="By specifying your gender in your profile, you can get other people to know you, and you can be recommended to people who use filters, thus increasing your interaction."
						android:textSize="14sp"
						android:textColor="#757575" />
					<LinearLayout
						android:id="@+id/gender_male"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:paddingTop="8dp"
						android:paddingRight="8dp"
						android:paddingBottom="8dp"
						android:gravity="center_vertical"
						android:orientation="horizontal">
						<ImageView
							android:id="@+id/gender_male_ic"
							android:layout_width="34dp"
							android:layout_height="34dp"
							android:padding="4dp"
							android:src="@drawable/icon_male_round"
							android:scaleType="centerInside" />
						<TextView
							android:id="@+id/gender_male_title"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="8dp"
							android:layout_marginRight="8dp"
							android:textSize="18sp"
							android:textColor="#000000"
							android:layout_weight="1"
							tools:replace="android:text"
							android:text="@string/male" />
						<ImageView
							android:id="@+id/gender_male_checkbox"
							android:layout_width="34dp"
							android:layout_height="34dp"
							android:padding="6dp"
							android:src="@drawable/checkbox_not_checked"
							android:scaleType="centerInside" />
					</LinearLayout>
					<LinearLayout
						android:id="@+id/gender_spc1"
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:layout_marginLeft="48dp"
						android:padding="8dp"
						android:background="#EEEEEE"
						android:orientation="horizontal" />
					<LinearLayout
						android:id="@+id/gender_female"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:paddingTop="8dp"
						android:paddingRight="8dp"
						android:paddingBottom="8dp"
						android:gravity="center_vertical"
						android:orientation="horizontal">
						<ImageView
							android:id="@+id/gender_female_ic"
							android:layout_width="34dp"
							android:layout_height="34dp"
							android:padding="4dp"
							android:src="@drawable/icon_female_round"
							android:scaleType="centerInside" />
						<TextView
							android:id="@+id/gender_female_title"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="8dp"
							android:layout_marginRight="8dp"
							android:textSize="18sp"
							android:textColor="#000000"
							android:layout_weight="1"
							tools:replace="android:text"
							android:text="@string/female" />
						<ImageView
							android:id="@+id/gender_female_checkbox"
							android:layout_width="34dp"
							android:layout_height="34dp"
							android:padding="6dp"
							android:src="@drawable/checkbox_not_checked"
							android:scaleType="centerInside" />
					</LinearLayout>
					<LinearLayout
						android:id="@+id/gender_spc2"
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:layout_marginLeft="48dp"
						android:padding="8dp"
						android:background="#EEEEEE"
						android:orientation="horizontal" />
					<LinearLayout
						android:id="@+id/gender_gone"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:paddingTop="8dp"
						android:paddingRight="8dp"
						android:paddingBottom="8dp"
						android:gravity="center_vertical"
						android:orientation="horizontal">
						<ImageView
							android:id="@+id/gender_gone_ic"
							android:layout_width="34dp"
							android:layout_height="34dp"
							android:padding="7dp"
							android:src="@drawable/icon_transgender_round"
							android:scaleType="centerInside" />
						<TextView
							android:id="@+id/gender_gone_title"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="8dp"
							android:layout_marginRight="8dp"
							android:textSize="18sp"
							android:textColor="#000000"
							android:layout_weight="1"
							tools:replace="android:text"
							android:text="@string/gender_gone_title" />
						<ImageView
							android:id="@+id/gender_gone_checkbox"
							android:layout_width="34dp"
							android:layout_height="34dp"
							android:padding="6dp"
							android:src="@drawable/icon_check_circle_round"
							android:scaleType="centerInside" />
					</LinearLayout>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/region"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="14dp"
					android:background="#FFFFFF"
					android:orientation="vertical">
					<LinearLayout
						android:id="@+id/region_top"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginBottom="4dp"
						android:gravity="center_horizontal|center_vertical"
						android:orientation="horizontal">
						<TextView
							android:id="@+id/region_title"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="20sp"
							android:textStyle="bold"
							android:textColor="#000000"
							android:layout_weight="1"
							tools:replace="android:text"
							android:text="@string/region" />
						<ImageView
							android:id="@+id/region_arrow"
							android:layout_width="18dp"
							android:layout_height="18dp"
							android:src="@drawable/arrow_icms_2"
							android:scaleType="centerInside" />
					</LinearLayout>
					<TextView
						android:id="@+id/region_subtitle"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="By setting the region, you can show your country's flag badge in your full profile and activate local posts filtered by the country you choose."
						android:textSize="14sp"
						android:textColor="#757575" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/profile_image_history_stage"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="14dp"
					android:padding="14dp"
					android:background="#FFFFFF"
					android:orientation="vertical">
					<LinearLayout
						android:id="@+id/profile_image_history_stage_top"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginBottom="4dp"
						android:gravity="center_horizontal|center_vertical"
						android:orientation="horizontal">
						<TextView
							android:id="@+id/profile_image_history_stage_title"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="Previous profile photos"
							android:textSize="20sp"
							android:textStyle="bold"
							android:textColor="#000000"
							android:layout_weight="1" />
						<ImageView
							android:id="@+id/profile_image_history_stage_arrow"
							android:layout_width="18dp"
							android:layout_height="18dp"
							android:src="@drawable/arrow_icms_2"
							android:scaleType="centerInside" />
					</LinearLayout>
					<TextView
						android:id="@+id/profile_image_history_stage_subtext"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="Manage your all profile photos uploaded on Synapse and manually select one."
						android:textSize="14sp"
						android:textColor="#757575" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/cover_image_history_stage"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="14dp"
					android:padding="14dp"
					android:background="#FFFFFF"
					android:orientation="vertical">
					<LinearLayout
						android:id="@+id/cover_image_history_stage_top"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginBottom="4dp"
						android:gravity="center_horizontal|center_vertical"
						android:orientation="horizontal">
						<TextView
							android:id="@+id/cover_image_history_stage_title"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="Previous cover photos"
							android:textSize="20sp"
							android:textStyle="bold"
							android:textColor="#000000"
							android:layout_weight="1" />
						<ImageView
							android:id="@+id/cover_image_history_stage_arrow"
							android:layout_width="18dp"
							android:layout_height="18dp"
							android:src="@drawable/arrow_icms_2"
							android:scaleType="centerInside" />
					</LinearLayout>
					<TextView
						android:id="@+id/cover_image_history_stage_subtext"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="You can manage all your previously added cover photos here."
						android:textSize="14sp"
						android:textColor="#757575" />
				</LinearLayout>
			</LinearLayout>
		</ScrollView>
		<LinearLayout
			android:id="@+id/mLoadingBody"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:padding="8dp"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal">
			<ProgressBar
				android:id="@+id/mLoadingBar"
				android:layout_width="24dp"
				android:layout_height="24dp"
				android:indeterminate="false"
				style="?android:progressBarStyle" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
