<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/body"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:paddingTop="14dp"
		android:paddingBottom="14dp"
		android:background="#FFFFFF"
		android:gravity="center_horizontal"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/sldr"
			android:layout_width="50dp"
			android:layout_height="8dp"
			android:layout_marginBottom="14dp"
			android:padding="8dp"
			android:background="#EEEEEE"
			android:orientation="horizontal" />
		<LinearLayout
			android:id="@+id/settings"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="22dp"
			android:paddingTop="10dp"
			android:paddingRight="22dp"
			android:paddingBottom="10dp"
			android:gravity="center_vertical"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/settings_ic"
				android:focusable="false"
				android:layout_width="34dp"
				android:layout_height="34dp"
				android:layout_marginRight="16dp"
				android:padding="5dp"
				android:src="@drawable/default_image"
				android:scaleType="fitCenter" />
			<TextView
				android:id="@+id/settings_title"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="20sp"
				android:textStyle="bold"
				android:textColor="#000000"
				tools:replace="android:text"
				android:text="@string/settings" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/copy_link"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="22dp"
			android:paddingTop="10dp"
			android:paddingRight="22dp"
			android:paddingBottom="10dp"
			android:gravity="center_vertical"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/copy_link_ic"
				android:focusable="false"
				android:layout_width="34dp"
				android:layout_height="34dp"
				android:layout_marginRight="16dp"
				android:padding="5dp"
				android:src="@drawable/link_ic"
				android:scaleType="fitCenter" />
			<TextView
				android:id="@+id/copy_link_title"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="20sp"
				android:textStyle="bold"
				android:textColor="#000000"
				tools:replace="android:text"
				android:text="@string/copy_link" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/block"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="22dp"
			android:paddingTop="10dp"
			android:paddingRight="22dp"
			android:paddingBottom="10dp"
			android:gravity="center_vertical"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/block_ic"
				android:focusable="false"
				android:layout_width="34dp"
				android:layout_height="34dp"
				android:layout_marginRight="16dp"
				android:padding="5dp"
				android:src="@drawable/default_image"
				android:scaleType="fitCenter" />
			<TextView
				android:id="@+id/block_title"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="20sp"
				android:textStyle="bold"
				android:textColor="#F44336"
				tools:replace="android:text"
				android:text="@string/block" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/report"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="22dp"
			android:paddingTop="10dp"
			android:paddingRight="22dp"
			android:paddingBottom="10dp"
			android:gravity="center_vertical"
			android:orientation="horizontal">
			<ImageView
				android:id="@+id/report_ic"
				android:focusable="false"
				android:layout_width="34dp"
				android:layout_height="34dp"
				android:layout_marginRight="16dp"
				android:padding="5dp"
				android:src="@drawable/default_image"
				android:scaleType="fitCenter" />
			<TextView
				android:id="@+id/report_title"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="20sp"
				android:textStyle="bold"
				android:textColor="#F44336"
				tools:replace="android:text"
				android:text="@string/report" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
