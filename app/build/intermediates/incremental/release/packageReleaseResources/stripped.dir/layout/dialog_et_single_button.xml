<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/main"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="8dp"
		android:background="@android:color/transparent"
		android:gravity="center_horizontal|center_vertical"
		android:orientation="vertical"
		android:layout_weight="1">
		<androidx.cardview.widget.CardView
			android:id="@+id/dialog_card"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			app:cardBackgroundColor="#E9E7EC"
			app:cardElevation="1dp"
			app:cardCornerRadius="25dp">
			<LinearLayout
				android:id="@+id/dialog_card_body"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="15dp"
				android:background="@android:color/transparent"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="vertical"
				android:animateLayoutChanges="true">
				<TextView
					android:id="@+id/dialog_top_title"
					android:focusable="false"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="20dp"
					android:padding="8dp"
					android:text="@string/placeholder_title"
					android:textSize="20sp"
					android:textColor="#445E91" />
				<com.google.android.material.textfield.TextInputLayout
					android:id="@+id/image_url_input_inputlayout"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
					<EditText
						android:id="@+id/image_url_input"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:padding="15dp"
						android:textSize="16sp"
						android:textColor="#000000"
						android:hint="Enter image url"
						android:textColorHint="#494C54"
						android:focusable="true"
						android:focusableInTouchMode="true" />
				</com.google.android.material.textfield.TextInputLayout>
				<TextView
					android:id="@+id/subtitle"
					android:focusable="false"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="10dp"
					android:layout_marginBottom="10dp"
					android:paddingLeft="10dp"
					android:paddingRight="10dp"
					android:text="@string/placeholder_subtitle"
					android:textSize="14sp"
					android:textColor="#494C54" />
				<Button
					android:id="@+id/button1"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:padding="10dp"
					android:text="@string/placeholder_button_text"
					android:textSize="16sp"
					android:textColor="#000000"
					style="@style/Widget.Material3Expressive.Button"
					android:fontFamily="@font/product_sans_bold" />
			</LinearLayout>
		</androidx.cardview.widget.CardView>
	</LinearLayout>
</LinearLayout>
