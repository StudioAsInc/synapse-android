<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">

	<LinearLayout
		android:id="@+id/body"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="8dp"
		android:paddingRight="8dp"
		android:orientation="horizontal"
		android:animateLayoutChanges="true">

		<androidx.cardview.widget.CardView
			android:id="@+id/mProfileCard"
			android:layout_width="34dp"
			android:layout_height="34dp"
			android:layout_marginLeft="2dp"
			android:layout_marginTop="8dp"
			app:cardElevation="0dp"
			android:visibility="gone"
			app:cardCornerRadius="200dp">
			<ImageView
				android:id="@+id/mProfileImage"
				android:focusable="false"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:src="@drawable/avatar"
				android:scaleType="centerCrop" />
		</androidx.cardview.widget.CardView>

		<LinearLayout
			android:id="@+id/message_layout"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<LinearLayout
				android:id="@+id/messageBG"
				android:layout_width="250dp"
				android:layout_height="wrap_content"
				android:layout_marginLeft="4dp"
				android:layout_marginRight="4dp"
				android:paddingLeft="12dp"
				android:paddingTop="10dp"
				android:paddingRight="12dp"
				android:paddingBottom="10dp"
				android:background="#00000000"
				android:clickable="true"
				android:focusable="true"
				android:foreground="?attr/selectableItemBackgroundBorderless"
				android:orientation="vertical">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center_vertical"
					android:orientation="horizontal">

					<ImageButton
						android:id="@+id/play_pause_button"
						android:layout_width="36dp"
						android:layout_height="36dp"
						android:src="@drawable/ic_play_arrow_24px"
						android:background="?attr/selectableItemBackgroundBorderless"
						android:contentDescription="@string/play_voice_message" />

					<com.cleveroad.audiovisualization.GLAudioVisualizationView
						android:id="@+id/waveform_view"
						android:layout_width="0dp"
						android:layout_height="30dp"
						android:layout_weight="1"
						android:layout_marginStart="8dp"
						android:layout_marginEnd="8dp"
						app:av_layers_count="4"
						app:av_wave_height="15dp"
						app:av_footer_height="1dp"
						app:av_waves_count="25"
						app:av_background_color="@android:color/transparent"
						/>
				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:gravity="center_vertical">

					<SeekBar
						android:id="@+id/seek_bar"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:max="100"
						android:progress="0"/>

					<TextView
						android:id="@+id/duration_text"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginStart="8dp"
						android:text="0:00"
						android:textSize="12sp" />
				</LinearLayout>
			</LinearLayout>

			<LinearLayout
				android:id="@+id/my_message_info"
				android:layout_width="wrap_content"
				android:layout_height="16dp"
				android:layout_marginLeft="8dp"
				android:layout_marginRight="8dp"
				android:layout_marginBottom="2dp"
				android:gravity="right|center_vertical"
				android:orientation="horizontal"
				android:layout_gravity="right">
				<TextView
					android:id="@+id/date"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="4dp"
					android:layout_marginRight="4dp"
					android:text="00:00"
					android:textSize="12sp"
					android:textColor="#000000" />
				<ImageView
					android:id="@+id/message_state"
					android:focusable="false"
					android:layout_width="14dp"
					android:layout_height="14dp"
					android:layout_marginRight="4dp"
					android:src="@drawable/ic_check_black"
					android:scaleType="centerInside" />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
