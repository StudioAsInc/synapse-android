<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<androidx.cardview.widget.CardView
		android:id="@+id/roundLayoutBS"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:cardBackgroundColor="#FFFFFF"
		app:cardElevation="0dp"
		app:cardCornerRadius="20dp">
		<LinearLayout
			android:id="@+id/main"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:paddingLeft="15dp"
			android:paddingTop="10dp"
			android:paddingRight="15dp"
			android:paddingBottom="10dp"
			android:background="@android:color/transparent"
			android:gravity="center_horizontal"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/bar"
				android:layout_width="50dp"
				android:layout_height="5dp"
				android:padding="8dp"
				android:orientation="horizontal"
				android:background="@drawable/bsbar" />
			<TextView
				android:id="@+id/textview3"
				android:focusable="false"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="center_horizontal|center_vertical"
				android:text="Scan with\nRocket app to PAY"
				android:textSize="20sp"
				android:textStyle="bold"
				android:textColor="#000000" />
			<ImageView
				android:id="@+id/QR"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="250dp"
				android:layout_marginTop="15dp"
				android:src="@drawable/rocketqr57"
				android:scaleType="fitCenter" />
			<TextView
				android:id="@+id/number"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp"
				android:padding="8dp"
				android:text="0 1 7 9 2 8 8 9 0 5 7"
				android:textSize="20sp"
				android:textStyle="bold"
				android:textColor="#E2136E" />
			<TextView
				android:id="@+id/instructions"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Hold the number to copy"
				android:textSize="12sp"
				android:textColor="#616161" />
			<TextView
				android:id="@+id/textview2"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="30dp"
				android:paddingLeft="20dp"
				android:paddingRight="20dp"
				android:gravity="center_horizontal|center_vertical"
				android:text="Send money on Rocket Personal by copying the number or scan the QR Code from the Rocket app."
				android:textSize="12sp"
				android:textColor="#616161" />
		</LinearLayout>
	</androidx.cardview.widget.CardView>
</LinearLayout>
