<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/body"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="10dp"
		android:paddingTop="10dp"
		android:paddingBottom="10dp"
		android:orientation="horizontal">
		<androidx.cardview.widget.CardView
			android:id="@+id/profileCard"
			android:layout_width="36dp"
			android:layout_height="36dp"
			app:cardElevation="0dp">
			<ImageView
				android:id="@+id/profileImage"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/avatar"
				android:scaleType="centerCrop" />
		</androidx.cardview.widget.CardView>
		<LinearLayout
			android:id="@+id/commentUnix"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dp"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/top"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginRight="10dp"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/username"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginRight="4dp"
					android:text="@username"
					android:textSize="16sp"
					android:textStyle="bold"
					android:textColor="#616161" />
				<ImageView
					android:id="@+id/genderBadge"
					android:focusable="false"
					android:layout_width="0dp"
					android:layout_height="14dp"
					android:layout_marginRight="4dp"
					android:src="@drawable/male_badge"
					android:scaleType="centerInside" />
				<ImageView
					android:id="@+id/badge"
					android:focusable="false"
					android:layout_width="0dp"
					android:layout_height="15dp"
					android:src="@drawable/verified_badge"
					android:scaleType="centerInside" />
				<ImageView
					android:id="@+id/top_popular_1_fire_ic"
					android:focusable="false"
					android:layout_width="12dp"
					android:layout_height="12dp"
					android:layout_marginLeft="4dp"
					android:src="@drawable/trending_topic"
					android:scaleType="centerInside" />
				<ImageView
					android:id="@+id/top_popular_2_fire_ic"
					android:focusable="false"
					android:layout_width="12dp"
					android:layout_height="12dp"
					android:layout_marginLeft="4dp"
					android:src="@drawable/trending_topic"
					android:scaleType="centerInside" />
				<ImageView
					android:id="@+id/top_popular_3_fire_ic"
					android:focusable="false"
					android:layout_width="12dp"
					android:layout_height="12dp"
					android:layout_marginLeft="4dp"
					android:src="@drawable/trending_topic"
					android:scaleType="centerInside" />
				<LinearLayout
					android:id="@+id/spc"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="8dp"
					android:layout_marginRight="8dp"
					android:padding="8dp"
					android:orientation="vertical"
					android:layout_weight="1" />
				<LinearLayout
					android:id="@+id/more"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="vertical">
					<ImageView
						android:id="@+id/more_ic"
						android:focusable="false"
						android:layout_width="28dp"
						android:layout_height="22dp"
						android:src="@drawable/default_image"
						android:scaleType="fitCenter"
						android:alpha="0.0" />
				</LinearLayout>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/pcb"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginRight="10dp"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/comment_text"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginBottom="4dp"
					android:text="comment"
					android:textSize="16sp"
					android:textColor="#000000"
					android:layout_weight="1"
					android:autoLink="all" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/cmBottom"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginRight="10dp"
				android:gravity="center_vertical"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/push"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginRight="8dp"
					android:text="0s"
					android:textColor="#616161"
					tools:replace="android:textSize"
					android:textSize="12dp" />
				<RelativeLayout
					android:id="@+id/likedByPublisherLayout"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginRight="8dp"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="vertical">
					<de.hdodenhof.circleimageview.CircleImageView
						android:id="@+id/likedByPublisherLayoutAvatar"
						android:layout_width="16dp"
						android:layout_height="16dp"
						android:src="@drawable/avatar"
						app:civ_border_width="0dp"
						app:civ_border_color="#008DCD"
						app:civ_circle_background_color="#00000000"
						app:civ_border_overlay="true" />
					<LinearLayout
						android:id="@+id/likedByPublisherLayoutRelative"
						android:layout_width="16dp"
						android:layout_height="16dp"
						android:layout_marginLeft="1dp"
						android:layout_marginTop="1dp"
						android:gravity="right|bottom"
						android:orientation="horizontal">
						<ImageView
							android:id="@+id/likedByPublisherLayoutHeartIc"
							android:focusable="false"
							android:layout_width="10dp"
							android:layout_height="10dp"
							android:layout_marginLeft="2dp"
							android:layout_marginTop="2dp"
							android:paddingLeft="1dp"
							android:paddingTop="2dp"
							android:paddingRight="1dp"
							android:paddingBottom="1dp"
							android:background="#FFFFFF"
							android:src="@drawable/ic_favorite_black"
							android:scaleType="centerInside" />
					</LinearLayout>
				</RelativeLayout>
				<LinearLayout
					android:id="@+id/btmSpc"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:orientation="vertical"
					android:layout_weight="1" />
				<LinearLayout
					android:id="@+id/like_unlike"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="4dp"
					android:gravity="center_horizontal|center_vertical"
					android:orientation="horizontal">
					<ImageView
						android:id="@+id/like_unlike_ic"
						android:focusable="false"
						android:layout_width="20dp"
						android:layout_height="20dp"
						android:layout_marginLeft="8dp"
						android:src="@drawable/post_icons_1_1"
						android:scaleType="fitCenter" />
					<TextView
						android:id="@+id/like_count"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="4dp"
						android:layout_marginRight="8dp"
						android:text="0"
						android:textSize="16sp"
						android:textColor="#757575" />
				</LinearLayout>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/replies_layout"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">
				<TextView
					android:id="@+id/show_other_replies_button"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="8dp"
					android:paddingTop="4dp"
					android:paddingBottom="4dp"
					android:text="Show Replies"
					android:textSize="14sp"
					android:textStyle="bold"
					android:textColor="#757575" />
				<androidx.recyclerview.widget.RecyclerView
					android:id="@+id/other_replies_list"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="8dp"
					android:layout_marginBottom="8dp" />
				<TextView
					android:id="@+id/hide_replies_list_button"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginBottom="8dp"
					android:paddingLeft="8dp"
					android:paddingTop="4dp"
					android:paddingRight="8dp"
					android:paddingBottom="4dp"
					android:text="Hide Replies"
					android:textSize="14sp"
					android:textStyle="bold"
					android:textColor="#757575" />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
	<TextView
		android:id="@+id/show_more_comment"
		android:focusable="false"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="16dp"
		android:paddingTop="8dp"
		android:paddingRight="16dp"
		android:paddingBottom="8dp"
		android:gravity="center_horizontal|center_vertical"
		android:textSize="14sp"
		android:textStyle="bold"
		android:textColor="#616161"
		tools:replace="android:text"
		android:text="@string/show_more_comments" />
	<ProgressBar
		android:id="@+id/progress"
		android:focusable="false"
		android:layout_width="match_parent"
		android:layout_height="22dp"
		android:layout_marginBottom="8dp"
		android:indeterminate="false"
		style="?android:progressBarStyle"
		android:layout_gravity="center_horizontal" />
</LinearLayout>
