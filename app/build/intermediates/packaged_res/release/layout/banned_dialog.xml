<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/body"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="14dp"
		android:gravity="center_horizontal|center_vertical"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/dialog_body"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="14dp"
			android:background="#FFFFFF"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="vertical">
			<com.airbnb.lottie.LottieAnimationView
				android:id="@+id/lottie1"
				android:layout_width="90dp"
				android:layout_height="90dp"
				android:padding="8dp"
				android:scaleType="fitCenter"
				android:layout_centerInParent="true"
				app:lottie_fileName="copilot.json"
				app:lottie_loop="true"
				app:lottie_autoPlay="true" />
			<TextView
				android:id="@+id/title"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:text="Account suspended!"
				android:textSize="25sp"
				android:textStyle="bold"
				android:textColor="#000000" />
			<TextView
				android:id="@+id/subtext"
				android:focusable="false"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingTop="8dp"
				android:gravity="left|center_vertical"
				android:text="@string/banned_access_denied_subtext"
				android:textSize="16sp"
				android:textColor="#212121" />
			<LinearLayout
				android:id="@+id/linear1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp"
				android:layout_marginBottom="10dp"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="horizontal">
				<TextView
					android:id="@+id/watermark_ai"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center_horizontal|center_vertical"
					android:text="Automatically replied by "
					android:textSize="10sp"
					android:textColor="#616161" />
				<TextView
					android:id="@+id/textview3"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center_horizontal|center_vertical"
					android:text="AI"
					android:textSize="10sp"
					android:textStyle="bold"
					android:textColor="#445E91" />
			</LinearLayout>
			<TextView
				android:id="@+id/create_request_button"
				android:focusable="false"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="14dp"
				android:paddingTop="10dp"
				android:paddingBottom="10dp"
				android:background="#445E91"
				android:gravity="center_horizontal|center_vertical"
				android:text="Create request"
				android:textSize="16sp"
				android:textColor="#FFFFFF" />
			<TextView
				android:id="@+id/close_app_button"
				android:focusable="false"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingTop="10dp"
				android:paddingBottom="10dp"
				android:background="#F5F5F5"
				android:gravity="center_horizontal|center_vertical"
				android:textSize="16sp"
				android:textStyle="bold"
				android:textColor="#000000"
				tools:replace="android:text"
				android:text="@string/close_app" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
