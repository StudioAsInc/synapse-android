<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:id="@+id/_main">
	<LinearLayout
		android:id="@+id/main"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#FFFFFF"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/top"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingLeft="8dp"
			android:paddingTop="4dp"
			android:paddingRight="8dp"
			android:paddingBottom="4dp"
			android:background="#FFFFFF"
			android:gravity="center_vertical"
			android:orientation="horizontal"
			android:elevation="1dp">
			<ImageView
				android:id="@+id/back"
				android:layout_width="48dp"
				android:layout_height="48dp"
				android:layout_marginRight="8dp"
				android:padding="12dp"
				android:src="@drawable/ic_arrow_back_black"
				android:scaleType="fitCenter" />
			<LinearLayout
				android:id="@+id/topSpc"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_marginRight="8dp"
				android:gravity="center_vertical"
				android:orientation="vertical"
				android:layout_weight="1">
				<TextView
					android:id="@+id/title"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Create a post"
					android:textSize="20sp"
					android:textStyle="bold"
					android:textColor="#000000" />
			</LinearLayout>
			<Button
				android:id="@+id/continueButton"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="30dp"
				android:paddingTop="8dp"
				android:paddingRight="30dp"
				android:paddingBottom="8dp"
				android:text="@string/continue_button"
				android:textSize="18sp"
				android:textColor="@color/colorSurface"
				style="@style/Widget.Material3.Button" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/topSpace"
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:padding="8dp"
			android:background="#F5F5F5"
			android:orientation="horizontal" />
		<ScrollView
			android:id="@+id/scroll"
			android:layout_width="match_parent"
			android:layout_height="match_parent">
			<LinearLayout
				android:id="@+id/scrollBody"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">
				<LinearLayout
					android:id="@+id/PostInfoTop1"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical">
					<androidx.cardview.widget.CardView
						android:id="@+id/cropperImageCard"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_margin="16dp"
						android:gravity="center_horizontal|center_vertical"
						app:cardElevation="2dp">
						<ImageView
							android:id="@+id/croppedImageView"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:src="@drawable/default_image"
							android:scaleType="fitCenter" />
					</androidx.cardview.widget.CardView>
					<com.synapse.social.studioasinc.FadeEditText
						android:id="@+id/postDescription"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="16dp"
						android:layout_marginRight="16dp"
						android:layout_marginBottom="16dp"
						android:padding="16dp"
						android:background="#F5F5F5"
						android:textSize="18sp"
						android:textColor="#000000"
						android:hint="Write something about this photo"
						android:textColorHint="#757575"
						android:layout_weight="1"
						android:maxLength="2500" />
				</LinearLayout>
				<LinearLayout
					android:id="@+id/topSpace2"
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:padding="8dp"
					android:orientation="horizontal" />
				<LinearLayout
					android:id="@+id/spc2"
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:padding="8dp"
					android:background="#ECEFF1"
					android:orientation="horizontal" />
				<LinearLayout
					android:id="@+id/post_settings_statistics"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical">
					<LinearLayout
						android:id="@+id/post_settings_statistics_top"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:paddingLeft="16dp"
						android:paddingTop="12dp"
						android:paddingRight="16dp"
						android:paddingBottom="12dp"
						android:gravity="center_horizontal|center_vertical"
						android:orientation="horizontal">
						<TextView
							android:id="@+id/post_settings_statistics_top_title"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="Statistics settings"
							android:textSize="18sp"
							android:textStyle="bold"
							android:textColor="#000000"
							android:layout_weight="1" />
						<ImageView
							android:id="@+id/post_settings_statistics_top_arrow"
							android:layout_width="28dp"
							android:layout_height="28dp"
							android:padding="2dp"
							android:src="@drawable/ic_keyboard_arrow_down_black"
							android:scaleType="fitCenter" />
					</LinearLayout>
					<LinearLayout
						android:id="@+id/post_settings_statistics_middle"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical">
						<LinearLayout
							android:id="@+id/post_settings_statistics_hide_views"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:paddingLeft="16dp"
							android:paddingTop="8dp"
							android:paddingRight="16dp"
							android:paddingBottom="8dp"
							android:orientation="vertical">
							<androidx.appcompat.widget.SwitchCompat
								android:id="@+id/post_settings_statistics_hide_views_switch"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_marginBottom="4dp"
								android:gravity="left|center_vertical"
								android:textSize="18sp"
								android:textStyle="bold"
								android:textColor="#000000"
								tools:replace="android:text"
								android:text="@string/hide_the_number_of_views"
								android:clickable="false"
								android:thumb="@drawable/switch_in"
								app:track="@drawable/switch_out" />
							<TextView
								android:id="@+id/post_settings_statistics_hide_views_subtitle"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="If enabled, the views count won't be\n shown on this post"
								android:textSize="14sp"
								android:textColor="#424242" />
						</LinearLayout>
						<LinearLayout
							android:id="@+id/post_settings_statistics_hide_likes"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:paddingLeft="16dp"
							android:paddingTop="8dp"
							android:paddingRight="16dp"
							android:paddingBottom="12dp"
							android:orientation="vertical">
							<androidx.appcompat.widget.SwitchCompat
								android:id="@+id/post_settings_statistics_hide_likes_switch"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_marginBottom="4dp"
								android:gravity="left|center_vertical"
								android:textSize="18sp"
								android:textStyle="bold"
								android:textColor="#000000"
								tools:replace="android:text"
								android:text="@string/hide_the_number_of_likes"
								android:clickable="false"
								android:thumb="@drawable/switch_in"
								app:track="@drawable/switch_out" />
							<TextView
								android:id="@+id/post_settings_statistics_hide_likes_subtitle"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="If enabled, Likes count won't be\nshown on this post"
								android:textSize="14sp"
								android:textColor="#424242" />
						</LinearLayout>
						<LinearLayout
							android:id="@+id/post_settings_statistics_hide_comments"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:paddingLeft="16dp"
							android:paddingTop="8dp"
							android:paddingRight="16dp"
							android:paddingBottom="12dp"
							android:orientation="vertical">
							<androidx.appcompat.widget.SwitchCompat
								android:id="@+id/post_settings_statistics_hide_comments_switch"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_marginBottom="4dp"
								android:gravity="left|center_vertical"
								android:textSize="18sp"
								android:textStyle="bold"
								android:textColor="#000000"
								tools:replace="android:text"
								android:text="@string/hide_the_number_of_comments"
								android:clickable="false"
								android:thumb="@drawable/switch_in"
								app:track="@drawable/switch_out" />
							<TextView
								android:id="@+id/post_settings_statistics_hide_comments_subtitle"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="If enabled, the number of comments\nwon't be shown on this post"
								android:textSize="14sp"
								android:textColor="#424242" />
						</LinearLayout>
					</LinearLayout>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/spc3"
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:padding="8dp"
					android:background="#ECEFF1"
					android:orientation="horizontal" />
				<LinearLayout
					android:id="@+id/post_settings_privacy"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="vertical">
					<LinearLayout
						android:id="@+id/post_settings_privacy_top"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:paddingLeft="16dp"
						android:paddingTop="12dp"
						android:paddingRight="16dp"
						android:paddingBottom="12dp"
						android:gravity="center_horizontal|center_vertical"
						android:orientation="horizontal">
						<TextView
							android:id="@+id/post_settings_privacy_top_title"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:textSize="18sp"
							android:textStyle="bold"
							android:textColor="#000000"
							android:layout_weight="1"
							tools:replace="android:text"
							android:text="@string/privacy_settings" />
						<ImageView
							android:id="@+id/post_settings_privacy_top_arrow"
							android:layout_width="28dp"
							android:layout_height="28dp"
							android:padding="2dp"
							android:src="@drawable/ic_keyboard_arrow_down_black"
							android:scaleType="fitCenter" />
					</LinearLayout>
					<LinearLayout
						android:id="@+id/post_settings_privacy_middle"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:orientation="vertical">
						<LinearLayout
							android:id="@+id/post_settings_privacy_hide_post"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:paddingLeft="16dp"
							android:paddingTop="8dp"
							android:paddingRight="16dp"
							android:paddingBottom="12dp"
							android:orientation="vertical">
							<androidx.appcompat.widget.SwitchCompat
								android:id="@+id/post_settings_privacy_hide_post_switch"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_marginBottom="4dp"
								android:gravity="left|center_vertical"
								android:textSize="18sp"
								android:textStyle="bold"
								android:textColor="#000000"
								tools:replace="android:text"
								android:text="@string/hide_post_from_everyone"
								android:clickable="false"
								android:thumb="@drawable/switch_in"
								app:track="@drawable/switch_out" />
							<TextView
								android:id="@+id/post_settings_privacy_hide_post_subtitle"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="Only you can see the post."
								android:textSize="14sp"
								android:textColor="#424242" />
						</LinearLayout>
						<LinearLayout
							android:id="@+id/post_settings_privacy_disable_save"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:paddingLeft="16dp"
							android:paddingTop="8dp"
							android:paddingRight="16dp"
							android:paddingBottom="12dp"
							android:orientation="vertical">
							<androidx.appcompat.widget.SwitchCompat
								android:id="@+id/post_settings_privacy_disable_save_switch"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_marginBottom="4dp"
								android:gravity="left|center_vertical"
								android:textSize="18sp"
								android:textStyle="bold"
								android:textColor="#000000"
								tools:replace="android:text"
								android:text="@string/disable_saving_to_favorites"
								android:clickable="false"
								android:thumb="@drawable/switch_in"
								app:track="@drawable/switch_out" />
							<TextView
								android:id="@+id/post_settings_privacy_disable_save_subtitle"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:textSize="14sp"
								android:textColor="#424242"
								tools:replace="android:text"
								android:text="@string/disable_saving_to_favorites_subtitle" />
						</LinearLayout>
						<LinearLayout
							android:id="@+id/post_settings_privacy_disable_comments"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:paddingLeft="16dp"
							android:paddingTop="8dp"
							android:paddingRight="16dp"
							android:paddingBottom="12dp"
							android:orientation="vertical">
							<androidx.appcompat.widget.SwitchCompat
								android:id="@+id/post_settings_privacy_disable_comments_switch"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:layout_marginBottom="4dp"
								android:gravity="left|center_vertical"
								android:textSize="18sp"
								android:textStyle="bold"
								android:textColor="#000000"
								tools:replace="android:text"
								android:text="@string/disable_comments"
								android:clickable="false"
								android:thumb="@drawable/switch_in"
								app:track="@drawable/switch_out" />
							<TextView
								android:id="@+id/post_settings_privacy_disable_comments_subtitle"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:textSize="14sp"
								android:textColor="#424242"
								tools:replace="android:text"
								android:text="@string/disable_comments_subtitle" />
						</LinearLayout>
					</LinearLayout>
				</LinearLayout>
				<LinearLayout
					android:id="@+id/spc4"
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:padding="8dp"
					android:background="#ECEFF1"
					android:orientation="horizontal" />
			</LinearLayout>
		</ScrollView>
	</LinearLayout>
</LinearLayout>
