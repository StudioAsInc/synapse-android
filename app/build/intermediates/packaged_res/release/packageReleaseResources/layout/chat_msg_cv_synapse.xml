<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/body"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="8dp"
		android:paddingRight="8dp"
		android:background="@android:color/transparent"
		android:orientation="horizontal"
		android:animateLayoutChanges="true">
		<androidx.cardview.widget.CardView
			android:id="@+id/mProfileCard"
			android:layout_width="34dp"
			android:layout_height="34dp"
			android:layout_marginLeft="8dp"
			android:layout_marginTop="6dp"
			app:cardElevation="0dp"
			android:visibility="gone"
			app:cardCornerRadius="200dp">
			<ImageView
				android:id="@+id/mProfileImage"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:src="@drawable/avatar"
				android:scaleType="centerCrop"
				android:focusable="false" />
		</androidx.cardview.widget.CardView>
		<LinearLayout
			android:id="@+id/message_layout"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			<LinearLayout
				android:id="@+id/menuView_d"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:padding="8dp"
				android:orientation="horizontal" />
			<LinearLayout
				android:id="@+id/messageBG"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_marginLeft="8dp"
				android:layout_marginTop="2dp"
				android:layout_marginRight="8dp"
				android:layout_marginBottom="2dp"
				android:paddingLeft="12dp"
				android:paddingTop="10dp"
				android:paddingRight="12dp"
				android:paddingBottom="10dp"
				android:background="#00000000"
				android:clickable="true"
				android:focusable="true"
				android:foreground="?attr/selectableItemBackgroundBorderless"
				android:orientation="vertical">
				<com.google.android.material.card.MaterialCardView
					android:id="@+id/mRepliedMessageLayout"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginBottom="8dp"
					android:padding="8dp"
					android:orientation="horizontal"
					android:clickable="true"
					android:focusable="true"
					android:background="?attr/selectableItemBackground"
					app:cardElevation="0dp"
					app:cardCornerRadius="6dp">
					<LinearLayout
						android:id="@+id/mRepliedMessageLayoutLeftBar"
						android:layout_width="4dp"
						android:layout_height="match_parent"
						android:layout_marginRight="8dp"
						android:padding="8dp"
						android:background="#2979FF"
						android:orientation="vertical" />
					<LinearLayout
						android:id="@+id/mRepliedMessageLayoutRightBody"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical">
						<TextView
							android:id="@+id/mRepliedMessageLayoutUsername"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/ph_username"
							android:textSize="12sp"
							android:textColor="#445E91"
							android:singleLine="true"
							android:focusable="false" />
						<TextView
							android:id="@+id/mRepliedMessageLayoutMessage"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:paddingRight="4dp"
							android:text="@string/ph_replied_message"
							android:textSize="16sp"
							android:textColor="#424242"
							android:focusable="false"
							android:autoLink="all"
							android:maxLines="2"
							android:ellipsize="end" />
					</LinearLayout>
				</com.google.android.material.card.MaterialCardView>
				<androidx.cardview.widget.CardView
					android:id="@+id/mMessageImageBody"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					app:cardElevation="1dp"
					app:cardCornerRadius="10dp"
					android:visibility="gone">
					<ImageView
						android:id="@+id/mMessageImageView"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:src="@drawable/avatar"
						android:scaleType="fitCenter"
						android:focusable="false"
						android:maxHeight="200dp"
						android:minWidth="200dp" />
				</androidx.cardview.widget.CardView>
				<com.airbnb.lottie.LottieAnimationView
					android:id="@+id/lottie1"
					android:layout_width="70dp"
					android:layout_height="70dp"
					android:padding="8dp"
					app:lottie_fileName="bubble.json"
					app:lottie_loop="true"
					app:lottie_autoPlay="true"
					android:layout_centerInParent="true" />
				<TextView
					android:id="@+id/message_text"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/ph_message"
					android:textSize="16sp"
					android:focusable="false"
					android:autoLink="all"
					android:textColorLink="#FFFF00" />
			</LinearLayout>
			<LinearLayout
				android:id="@+id/my_message_info"
				android:layout_width="wrap_content"
				android:layout_height="16dp"
				android:layout_marginLeft="8dp"
				android:layout_marginRight="8dp"
				android:layout_marginBottom="2dp"
				android:gravity="right|center_vertical"
				android:orientation="horizontal"
				android:layout_gravity="right">
				<TextView
					android:id="@+id/date"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="4dp"
					android:layout_marginRight="4dp"
					android:text="00:00"
					android:textColor="#000000"
					android:focusable="false"
					tools:replace="android:textSize" />
				<ImageView
					android:id="@+id/message_state"
					android:layout_width="14dp"
					android:layout_height="14dp"
					android:layout_marginRight="4dp"
					android:src="@drawable/ic_check_black"
					android:scaleType="centerInside"
					android:focusable="false" />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
