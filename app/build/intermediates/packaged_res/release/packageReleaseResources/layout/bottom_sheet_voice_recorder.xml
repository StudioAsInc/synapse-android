<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?android:attr/colorBackground">

    <!-- State 1: Recording View -->
    <LinearLayout
        android:id="@+id/recording_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="visible">

        <Chronometer
            android:id="@+id/recording_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close_48px"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginEnd="32dp"
                android:contentDescription="@string/cancel_recording"/>

            <ImageButton
                android:id="@+id/stop_button"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_stop_24px"
                android:background="@drawable/circle_background_dark"
                app:tint="@android:color/white"
                android:scaleType="center"
                android:layout_marginEnd="32dp"
                android:contentDescription="@string/stop_recording"/>

            <ImageButton
                android:id="@+id/pause_resume_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pause_24px"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/pause_recording"/>
        </LinearLayout>
    </LinearLayout>

    <!-- State 2: Preview/Trimming View -->
    <LinearLayout
        android:id="@+id/preview_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageButton
                android:id="@+id/preview_play_pause_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_play_arrow_24px"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/play_preview"/>

            <com.cleveroad.audiovisualization.GLAudioVisualizationView
                android:id="@+id/waveform_view"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:av_layers_count="4"
                app:av_wave_height="20dp"
                app:av_footer_height="2dp"
                app:av_waves_count="20"
                app:av_background_color="@android:color/transparent"
                />

            <TextView
                android:id="@+id/preview_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textSize="14sp"/>
        </LinearLayout>

        <com.google.android.material.slider.RangeSlider
            android:id="@+id/trim_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="0.0"
            android:valueTo="100.0"
            app:values="@array/initial_range_slider_values" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="16dp">

            <ImageButton
                android:id="@+id/delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete_24px"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/delete_recording"/>

            <Button
                android:id="@+id/send_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
