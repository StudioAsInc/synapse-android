<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/body"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#FFFFFF"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/userInf"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:gravity="center_vertical"
			android:orientation="horizontal">
			<RelativeLayout
				android:id="@+id/profileCardRelative"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="3dp"
				android:layout_marginRight="11dp"
				android:orientation="vertical">
				<androidx.cardview.widget.CardView
					android:id="@+id/profileCard"
					android:layout_width="54dp"
					android:layout_height="54dp"
					app:cardElevation="0dp">
					<ImageView
						android:id="@+id/profileCardImage"
						android:focusable="false"
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:src="@drawable/avatar"
						android:scaleType="centerCrop" />
				</androidx.cardview.widget.CardView>
				<LinearLayout
					android:id="@+id/ProfileRelativeUp"
					android:layout_width="54dp"
					android:layout_height="54dp"
					android:gravity="right|bottom"
					android:orientation="vertical">
					<LinearLayout
						android:id="@+id/userStatusCircleBG"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="3dp"
						android:gravity="center_horizontal|center_vertical"
						android:orientation="vertical">
						<LinearLayout
							android:id="@+id/userStatusCircleIN"
							android:layout_width="12dp"
							android:layout_height="12dp"
							android:padding="8dp"
							android:background="#2196F3"
							android:orientation="vertical" />
					</LinearLayout>
				</LinearLayout>
			</RelativeLayout>
			<LinearLayout
				android:id="@+id/lin"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:orientation="vertical"
				android:layout_weight="1">
				<LinearLayout
					android:id="@+id/usr"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="center_vertical"
					android:orientation="horizontal">
					<TextView
						android:id="@+id/username"
						android:focusable="false"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginRight="4dp"
						android:text="Username"
						android:textStyle="bold"
						android:textColor="#000000"
						tools:replace="android:textSize"
						android:textSize="14dp" />
					<ImageView
						android:id="@+id/genderBadge"
						android:focusable="false"
						android:layout_width="16dp"
						android:layout_height="16dp"
						android:layout_marginRight="6dp"
						android:src="@drawable/default_image"
						android:scaleType="centerInside" />
					<ImageView
						android:id="@+id/verifiedBadge"
						android:focusable="false"
						android:layout_width="16dp"
						android:layout_height="16dp"
						android:layout_marginRight="6dp"
						android:src="@drawable/verified_badge"
						android:scaleType="centerInside" />
				</LinearLayout>
				<TextView
					android:id="@+id/report_count"
					android:focusable="false"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Reported by 0 People"
					android:textColor="#616161"
					android:singleLine="true"
					tools:replace="android:textSize"
					android:textSize="12dp" />
			</LinearLayout>
			<ImageView
				android:id="@+id/arrow_ic"
				android:focusable="false"
				android:layout_width="48dp"
				android:layout_height="48dp"
				android:layout_marginLeft="8dp"
				android:padding="14dp"
				android:src="@drawable/arrow_icms_2"
				android:scaleType="centerCrop" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/spc"
			android:layout_width="match_parent"
			android:layout_height="1dp"
			android:layout_marginLeft="75dp"
			android:padding="8dp"
			android:background="#F5F5F5"
			android:orientation="horizontal" />
	</LinearLayout>
</LinearLayout>
